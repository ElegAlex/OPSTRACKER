{% extends 'campagne/_layout.html.twig' %}

{% block title %}Recherche{% if query %} : {{ query }}{% endif %} - OpsTracker{% endblock %}

{% block main %}
{# HEADER #}
<header class="bg-white px-12 py-10 border-b-4 border-ink">
    <div class="flex justify-between items-end">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 bg-primary"></div>
                <span class="text-xs font-semibold text-muted uppercase tracking-[0.15em]">Recherche globale</span>
            </div>
            <h1 class="text-4xl font-bold tracking-tight">Rechercher une operation</h1>
            <p class="text-muted mt-2">Recherche dans toutes les campagnes actives</p>
        </div>
    </div>
</header>

{# CONTENT #}
<div class="flex-1 overflow-auto">
    <div class="px-12 py-10">

        {# Search form #}
        <form action="{{ path('app_search') }}" method="get" class="mb-10">
            <div class="bg-white border-2 border-ink p-6">
                <div class="flex items-center gap-4">
                    <div class="flex-1 relative">
                        <i data-feather="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted"></i>
                        <input type="text" name="q" value="{{ query }}" placeholder="Rechercher par matricule, nom ou notes..."
                            class="w-full pl-12 pr-4 py-4 text-lg border-2 border-ink/10 focus:border-ink focus:outline-none transition-colors"
                            autofocus>
                    </div>
                    <button type="submit" class="flex items-center gap-2 px-8 py-4 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                        <i data-feather="search" class="w-4 h-4"></i>
                        Rechercher
                    </button>
                </div>
                <p class="text-xs text-muted mt-3">Minimum 2 caracteres. Recherche dans le matricule, le nom et les notes des operations.</p>
            </div>
        </form>

        {# Results #}
        {% if query %}
            {% if grouped_results|length > 0 %}
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold text-ink">
                        {{ total_count }} resultat(s) pour "{{ query }}"
                    </h2>
                </div>

                <div class="space-y-8">
                    {% for group in grouped_results %}
                        <div class="bg-white border-2 border-ink overflow-hidden">
                            {# Campagne header #}
                            <div class="bg-paper border-b-2 border-ink px-6 py-4 flex items-center justify-between">
                                <div class="flex items-center gap-4">
                                    <div class="w-10 h-10 bg-primary/10 flex items-center justify-center">
                                        <i data-feather="layers" class="w-5 h-5 text-primary"></i>
                                    </div>
                                    <div>
                                        <h3 class="font-bold text-ink">{{ group.campagne.nom }}</h3>
                                        <p class="text-xs text-muted">
                                            {{ group.campagne.dateDebut|date('d M Y') }} - {{ group.campagne.dateFin|date('d M Y') }}
                                            <span class="mx-2">|</span>
                                            <span class="px-2 py-0.5 bg-{{ group.campagne.statutCouleur }}/10 text-{{ group.campagne.statutCouleur }} text-[10px] font-bold uppercase">
                                                {{ group.campagne.statutLabel }}
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <a href="{{ path('app_operation_index', {campagne: group.campagne.id}) }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-muted hover:text-ink transition-colors">
                                    Voir la campagne
                                    <i data-feather="arrow-right" class="w-4 h-4"></i>
                                </a>
                            </div>

                            {# Operations table #}
                            <table class="w-full">
                                <thead class="bg-paper/50 border-b border-ink/10">
                                    <tr>
                                        <th class="text-left px-6 py-3 text-xs font-bold text-ink uppercase tracking-wider">Identifiant</th>
                                        <th class="text-left px-6 py-3 text-xs font-bold text-ink uppercase tracking-wider">Description</th>
                                        <th class="text-left px-6 py-3 text-xs font-bold text-ink uppercase tracking-wider">Statut</th>
                                        <th class="text-left px-6 py-3 text-xs font-bold text-ink uppercase tracking-wider">Segment</th>
                                        <th class="text-left px-6 py-3 text-xs font-bold text-ink uppercase tracking-wider">Technicien</th>
                                        <th class="px-6 py-3"></th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-ink/5">
                                    {% for operation in group.operations %}
                                    <tr class="hover:bg-paper/50 transition-colors">
                                        <td class="px-6 py-4 text-sm font-medium text-ink">
                                            {{ operation.displayIdentifier ?? 'Operation' }}
                                        </td>
                                        <td class="px-6 py-4 text-sm text-ink">{{ operation.displayName ?? '' }}</td>
                                        <td class="px-6 py-4">
                                            <span class="px-2 py-1 bg-{{ operation.statutCouleur }}/10 text-{{ operation.statutCouleur }} text-xs font-bold uppercase tracking-wider">
                                                {{ operation.statutLabel }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-muted">
                                            {% if operation.segment %}
                                                <span class="flex items-center gap-2">
                                                    <span class="w-2 h-2 bg-{{ operation.segment.couleur }}"></span>
                                                    {{ operation.segment.nom }}
                                                </span>
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 text-sm text-muted">
                                            {% if operation.technicienAssigne %}
                                                {{ operation.technicienAssigne.prenom }} {{ operation.technicienAssigne.nom }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <a href="{{ path('app_operation_index', {campagne: group.campagne.id, search: operation.displayIdentifier}) }}"
                                               class="text-sm font-medium text-primary hover:text-ink transition-colors">
                                                Voir
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="bg-white border-2 border-ink/20 border-dashed p-12 text-center">
                    <div class="w-16 h-16 mx-auto bg-muted/10 flex items-center justify-center mb-4">
                        <i data-feather="search" class="w-8 h-8 text-muted"></i>
                    </div>
                    <h3 class="text-lg font-bold text-ink mb-2">Aucun resultat</h3>
                    <p class="text-sm text-muted">Aucune operation trouvee pour "{{ query }}".</p>
                    <p class="text-sm text-muted mt-1">Essayez avec d'autres termes de recherche.</p>
                </div>
            {% endif %}
        {% else %}
            <div class="bg-white border-2 border-ink/20 border-dashed p-12 text-center">
                <div class="w-16 h-16 mx-auto bg-primary/10 flex items-center justify-center mb-4">
                    <i data-feather="search" class="w-8 h-8 text-primary"></i>
                </div>
                <h3 class="text-lg font-bold text-ink mb-2">Recherche globale</h3>
                <p class="text-sm text-muted">Entrez un terme de recherche pour trouver des operations dans toutes les campagnes.</p>
            </div>
        {% endif %}

    </div>
</div>
{% endblock %}
