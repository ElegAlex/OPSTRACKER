{% extends 'base.html.twig' %}

{% block title %}Modifier {{ operation.matricule }} - OpsTracker{% endblock %}

{% block body %}
<div class="min-h-screen bg-paper">
    {# BREADCRUMB #}
    <nav class="bg-white border-b border-ink/10 px-12 py-3">
        <ol class="flex items-center gap-2 text-sm">
            <li>
                <a href="{{ path('app_dashboard_campagne', {id: campagne.id}) }}" class="text-muted hover:text-ink transition-colors">
                    {{ campagne.nom }}
                </a>
            </li>
            <li class="text-muted">/</li>
            <li>
                <a href="{{ path('app_operation_index', {campagne: campagne.id}) }}" class="text-muted hover:text-ink transition-colors">
                    Operations
                </a>
            </li>
            <li class="text-muted">/</li>
            <li>
                <a href="{{ path('app_operation_show', {campagne: campagne.id, id: operation.id}) }}" class="text-muted hover:text-ink transition-colors">
                    {{ operation.matricule }}
                </a>
            </li>
            <li class="text-muted">/</li>
            <li class="font-medium text-ink">Modifier</li>
        </ol>
    </nav>

    {# HEADER #}
    <header class="bg-white px-12 py-8 border-b-4 border-ink">
        <div class="flex justify-between items-start">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <div class="w-3 h-3 bg-primary"></div>
                    <span class="text-xs font-semibold text-muted uppercase tracking-[0.15em]">Modification</span>
                </div>
                <h1 class="text-3xl font-bold tracking-tight text-ink">{{ operation.matricule }}</h1>
                <p class="text-muted mt-1">{{ operation.nom }}</p>
            </div>

            <a href="{{ path('app_operation_show', {campagne: campagne.id, id: operation.id}) }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-muted hover:text-ink border-2 border-ink/10 hover:border-ink transition-colors">
                <i data-feather="x" class="w-4 h-4"></i>
                Annuler
            </a>
        </div>
    </header>

    {# CONTENT #}
    <div class="px-12 py-8">
        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : 'danger' }}/10 flex items-center gap-3">
                    <i data-feather="{{ label == 'success' ? 'check-circle' : 'alert-circle' }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : 'danger' }}"></i>
                    <span class="text-sm font-medium">{{ message }}</span>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="max-w-2xl">
            {{ form_start(form, {attr: {class: 'space-y-6'}}) }}
                {# Informations principales #}
                <div class="bg-white border-2 border-ink">
                    <div class="px-6 py-4 border-b-2 border-ink/10">
                        <h2 class="font-bold text-ink flex items-center gap-2">
                            <i data-feather="edit-2" class="w-4 h-4"></i>
                            Informations de l'operation
                        </h2>
                    </div>
                    <div class="p-6 space-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                {{ form_label(form.matricule) }}
                                {{ form_widget(form.matricule) }}
                                {{ form_errors(form.matricule) }}
                            </div>
                            <div>
                                {{ form_label(form.datePlanifiee) }}
                                {{ form_widget(form.datePlanifiee) }}
                                {{ form_errors(form.datePlanifiee) }}
                            </div>
                        </div>

                        <div>
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        <div>
                            {{ form_label(form.notes) }}
                            {{ form_widget(form.notes) }}
                            {{ form_errors(form.notes) }}
                        </div>
                    </div>
                </div>

                {# Affectation #}
                <div class="bg-white border-2 border-ink">
                    <div class="px-6 py-4 border-b-2 border-ink/10">
                        <h2 class="font-bold text-ink flex items-center gap-2">
                            <i data-feather="users" class="w-4 h-4"></i>
                            Affectation
                        </h2>
                    </div>
                    <div class="p-6 space-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                {{ form_label(form.technicienAssigne) }}
                                {{ form_widget(form.technicienAssigne) }}
                                {{ form_errors(form.technicienAssigne) }}
                            </div>
                            {% if form.segment is defined %}
                            <div>
                                {{ form_label(form.segment) }}
                                {{ form_widget(form.segment) }}
                                {{ form_errors(form.segment) }}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Info statut #}
                <div class="bg-paper border-2 border-ink/10 p-4">
                    <div class="flex items-start gap-3">
                        <i data-feather="info" class="w-5 h-5 text-muted mt-0.5"></i>
                        <div class="text-sm text-muted">
                            <p class="font-medium text-ink mb-1">Statut actuel :
                                <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-{{ operation.statutCouleur }} text-white text-xs font-bold">
                                    {{ operation.statutLabel }}
                                </span>
                            </p>
                            <p>Pour changer le statut, utilisez les boutons d'action sur la page de detail de l'operation.</p>
                        </div>
                    </div>
                </div>

                {# Actions #}
                <div class="flex items-center justify-between pt-4">
                    <a href="{{ path('app_operation_show', {campagne: campagne.id, id: operation.id}) }}" class="text-muted hover:text-ink transition-colors">
                        <span class="flex items-center gap-2">
                            <i data-feather="arrow-left" class="w-4 h-4"></i>
                            Annuler
                        </span>
                    </a>
                    <button type="submit" class="flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                        <i data-feather="save" class="w-4 h-4"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
