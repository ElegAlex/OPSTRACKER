{% extends 'campagne/_layout.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block main %}
<div class="flex-1 overflow-y-auto p-8">
    {# Header #}
    <div class="mb-8">
        <a href="{{ path('app_profile') }}" class="inline-flex items-center gap-2 text-muted hover:text-ink mb-4">
            <i data-feather="arrow-left" class="w-4 h-4"></i>
            Retour au profil
        </a>
        <h1 class="text-3xl font-bold text-ink mb-2">Modifier mon mot de passe</h1>
        <p class="text-muted">RG-001 : Min 8 caracteres, 1 majuscule, 1 chiffre, 1 caractere special</p>
    </div>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
        <div class="mb-6 p-4 border-2 {{ label == 'success' ? 'border-success bg-success/10 text-success' : 'border-danger bg-danger/10 text-danger' }}">
            <div class="flex items-center gap-3">
                <i data-feather="{{ label == 'success' ? 'check-circle' : 'alert-circle' }}" class="w-5 h-5"></i>
                {{ message }}
            </div>
        </div>
        {% endfor %}
    {% endfor %}

    <div class="max-w-xl">
        <div class="bg-white border-2 border-ink p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(form.current_password, null, {'label_attr': {'class': 'block text-sm font-medium text-ink uppercase tracking-wider mb-2'}}) }}
                {{ form_widget(form.current_password) }}
                {{ form_errors(form.current_password) }}
            </div>

            <div class="pt-4 border-t border-ink/10">
                <div class="mb-6">
                    {{ form_label(form.new_password.first, null, {'label_attr': {'class': 'block text-sm font-medium text-ink uppercase tracking-wider mb-2'}}) }}
                    {{ form_widget(form.new_password.first) }}
                    {% if form.new_password.first.vars.help %}
                    <p class="mt-2 text-sm text-muted">{{ form.new_password.first.vars.help }}</p>
                    {% endif %}
                    {{ form_errors(form.new_password.first) }}
                </div>

                <div>
                    {{ form_label(form.new_password.second, null, {'label_attr': {'class': 'block text-sm font-medium text-ink uppercase tracking-wider mb-2'}}) }}
                    {{ form_widget(form.new_password.second) }}
                    {{ form_errors(form.new_password.second) }}
                </div>
            </div>

            {{ form_errors(form.new_password) }}

            <div class="flex items-center gap-4 pt-6">
                <button type="submit" class="px-6 py-3 bg-primary text-white font-medium hover:bg-primary/80 transition-colors">
                    <i data-feather="save" class="w-4 h-4 inline mr-2"></i>
                    Enregistrer
                </button>
                <a href="{{ path('app_profile') }}" class="px-6 py-3 border-2 border-ink text-ink font-medium hover:bg-ink hover:text-white transition-colors">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>

        {# Aide #}
        <div class="mt-6 p-4 bg-paper border-2 border-ink/20">
            <h3 class="font-bold text-ink mb-2">Exigences du mot de passe</h3>
            <ul class="text-sm text-muted space-y-1">
                <li class="flex items-center gap-2">
                    <i data-feather="check" class="w-4 h-4 text-success"></i>
                    Au moins 8 caracteres
                </li>
                <li class="flex items-center gap-2">
                    <i data-feather="check" class="w-4 h-4 text-success"></i>
                    Au moins 1 majuscule (A-Z)
                </li>
                <li class="flex items-center gap-2">
                    <i data-feather="check" class="w-4 h-4 text-success"></i>
                    Au moins 1 chiffre (0-9)
                </li>
                <li class="flex items-center gap-2">
                    <i data-feather="check" class="w-4 h-4 text-success"></i>
                    Au moins 1 caractere special (!@#$%...)
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
