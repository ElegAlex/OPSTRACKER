{% extends 'campagne/_layout.html.twig' %}

{% block title %}Champs personnalisés - {{ typeOperation.nom }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8 max-w-4xl">
    {# En-tête #}
    <div class="mb-8">
        <a href="{{ path('admin', {crudAction: 'index', crudControllerFqcn: 'App\\\\Controller\\\\Admin\\\\TypeOperationCrudController'}) }}"
           class="inline-flex items-center text-muted hover:text-ink mb-4">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Retour aux types d'opération
        </a>

        <h1 class="text-2xl font-bold text-ink">Champs personnalisés</h1>
        <p class="text-muted mt-2">
            Type d'opération : <span class="font-semibold">{{ typeOperation.nom }}</span>
        </p>
        <p class="text-sm text-muted mt-1">
            <span class="inline-flex items-center px-2 py-1 bg-paper border-2 border-ink">
                RG-061
            </span>
            5 types disponibles : Texte court, Texte long, Nombre, Date, Liste déroulante
        </p>
    </div>

    {# Messages flash #}
    {% for message in app.flashes('success') %}
        <div class="bg-success/10 border-2 border-success text-success px-4 py-3 mb-6">
            <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                {{ message }}
            </div>
        </div>
    {% endfor %}

    {# Erreurs #}
    {% if erreurs|length > 0 %}
        <div class="bg-danger/10 border-2 border-danger text-danger px-4 py-3 mb-6">
            <div class="font-semibold mb-2">Erreurs de validation :</div>
            <ul class="list-disc list-inside">
                {% for erreur in erreurs %}
                    <li>{{ erreur }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {# Formulaire #}
    <form method="POST" id="champs-form">
        <div class="bg-white border-2 border-ink p-6 mb-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-semibold">Configuration des champs</h2>
                <button type="button" id="add-champ-btn"
                        class="inline-flex items-center px-4 py-2 bg-primary text-white font-medium hover:bg-primary/90">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Ajouter un champ
                </button>
            </div>

            <div id="champs-container">
                {% for index, champ in champs %}
                    <div class="champ-row border-2 border-muted/30 p-4 mb-4 relative" data-index="{{ index }}">
                        <button type="button" class="remove-champ-btn absolute top-2 right-2 text-danger hover:text-danger/80"
                                title="Supprimer ce champ">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-ink mb-1">Code *</label>
                                <input type="text" name="champs[{{ index }}][code]"
                                       value="{{ champ.code }}"
                                       class="w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary"
                                       placeholder="numero_serie"
                                       pattern="[a-z][a-z0-9_]*">
                                <p class="text-xs text-muted mt-1">Minuscules, chiffres, underscores</p>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-ink mb-1">Libellé *</label>
                                <input type="text" name="champs[{{ index }}][label]"
                                       value="{{ champ.label }}"
                                       class="w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary"
                                       placeholder="Numéro de série">
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-ink mb-1">Type</label>
                                <select name="champs[{{ index }}][type]"
                                        class="type-select w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary">
                                    {% for typeCode, typeLabel in types %}
                                        <option value="{{ typeCode }}" {{ champ.type == typeCode ? 'selected' : '' }}>
                                            {{ typeLabel }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="options-container" style="{{ champ.type == 'liste' ? '' : 'display:none' }}">
                                <label class="block text-sm font-medium text-ink mb-1">Options (séparées par virgule)</label>
                                <input type="text" name="champs[{{ index }}][options]"
                                       value="{{ champ.options|default([])|join(', ') }}"
                                       class="w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary"
                                       placeholder="Option 1, Option 2, Option 3">
                            </div>

                            <div class="flex items-center mt-6">
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="champs[{{ index }}][obligatoire]"
                                           class="sr-only peer"
                                           {{ champ.obligatoire ? 'checked' : '' }}>
                                    <div class="w-11 h-6 bg-muted/30 peer-focus:outline-none border-2 border-ink peer-checked:bg-primary after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-2 after:border-ink after:h-5 after:w-5 peer-checked:after:translate-x-full"></div>
                                    <span class="ml-3 text-sm font-medium text-ink">Champ obligatoire</span>
                                </label>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div id="empty-message" class="text-center py-8 text-muted">
                        <svg class="w-12 h-12 mx-auto mb-4 text-muted/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <p>Aucun champ personnalisé défini.</p>
                        <p class="text-sm">Cliquez sur "Ajouter un champ" pour commencer.</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        {# Boutons d'action #}
        <div class="flex justify-end gap-4">
            <a href="{{ path('admin', {crudAction: 'index', crudControllerFqcn: 'App\\\\Controller\\\\Admin\\\\TypeOperationCrudController'}) }}"
               class="px-6 py-3 border-2 border-ink text-ink font-medium hover:bg-paper">
                Annuler
            </a>
            <button type="submit"
                    class="px-6 py-3 bg-primary border-2 border-ink text-white font-medium hover:bg-primary/90">
                Enregistrer les champs
            </button>
        </div>
    </form>
</div>

{# Template pour un nouveau champ #}
<template id="champ-template">
    <div class="champ-row border-2 border-muted/30 p-4 mb-4 relative" data-index="__INDEX__">
        <button type="button" class="remove-champ-btn absolute top-2 right-2 text-danger hover:text-danger/80"
                title="Supprimer ce champ">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-ink mb-1">Code *</label>
                <input type="text" name="champs[__INDEX__][code]"
                       class="w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary"
                       placeholder="numero_serie"
                       pattern="[a-z][a-z0-9_]*">
                <p class="text-xs text-muted mt-1">Minuscules, chiffres, underscores</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-ink mb-1">Libellé *</label>
                <input type="text" name="champs[__INDEX__][label]"
                       class="w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary"
                       placeholder="Numéro de série">
            </div>

            <div>
                <label class="block text-sm font-medium text-ink mb-1">Type</label>
                <select name="champs[__INDEX__][type]"
                        class="type-select w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary">
                    {% for typeCode, typeLabel in types %}
                        <option value="{{ typeCode }}">{{ typeLabel }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="options-container" style="display:none">
                <label class="block text-sm font-medium text-ink mb-1">Options (séparées par virgule)</label>
                <input type="text" name="champs[__INDEX__][options]"
                       class="w-full px-3 py-2 border-2 border-ink focus:outline-none focus:border-primary"
                       placeholder="Option 1, Option 2, Option 3">
            </div>

            <div class="flex items-center mt-6">
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" name="champs[__INDEX__][obligatoire]"
                           class="sr-only peer">
                    <div class="w-11 h-6 bg-muted/30 peer-focus:outline-none border-2 border-ink peer-checked:bg-primary after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-2 after:border-ink after:h-5 after:w-5 peer-checked:after:translate-x-full"></div>
                    <span class="ml-3 text-sm font-medium text-ink">Champ obligatoire</span>
                </label>
            </div>
        </div>
    </div>
</template>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('champs-container');
    const addBtn = document.getElementById('add-champ-btn');
    const template = document.getElementById('champ-template');
    const emptyMessage = document.getElementById('empty-message');
    let nextIndex = {{ champs|length }};

    // Ajouter un champ
    addBtn.addEventListener('click', function() {
        if (emptyMessage) {
            emptyMessage.remove();
        }

        const html = template.innerHTML.replace(/__INDEX__/g, nextIndex);
        const div = document.createElement('div');
        div.innerHTML = html;
        const newRow = div.firstElementChild;
        container.appendChild(newRow);

        // Attacher les événements
        attachRowEvents(newRow);

        nextIndex++;
    });

    // Supprimer un champ
    function attachRowEvents(row) {
        const removeBtn = row.querySelector('.remove-champ-btn');
        const typeSelect = row.querySelector('.type-select');
        const optionsContainer = row.querySelector('.options-container');

        removeBtn.addEventListener('click', function() {
            row.remove();
        });

        typeSelect.addEventListener('change', function() {
            if (this.value === 'liste') {
                optionsContainer.style.display = '';
            } else {
                optionsContainer.style.display = 'none';
            }
        });
    }

    // Attacher les événements aux lignes existantes
    document.querySelectorAll('.champ-row').forEach(attachRowEvents);
});
</script>
{% endblock %}
