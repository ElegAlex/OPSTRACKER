{#
    Template d'affichage des etapes d'un ChecklistTemplate
    Utilise dans ChecklistTemplateCrudController (page detail)
#}
{% set etapes = field.value %}

{% if etapes is empty or etapes.phases is empty %}
    <p class="text-muted">Aucune phase definie</p>
{% else %}
    <div class="checklist-structure">
        {% for phase in etapes.phases %}
            <div class="phase-block mb-3 p-3 border rounded">
                <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-dark me-2">{{ phase.ordre }}</span>
                    <strong>{{ phase.nom }}</strong>
                    {% if phase.verrouillable %}
                        <span class="badge bg-warning ms-2" title="Phase verrouillable (RG-032)">
                            <i class="fa fa-lock"></i> Verrouillable
                        </span>
                    {% endif %}
                </div>

                {% if phase.etapes is empty %}
                    <p class="text-muted small mb-0 ms-4">Aucune etape</p>
                {% else %}
                    <ul class="list-group list-group-flush ms-4">
                        {% for etape in phase.etapes %}
                            <li class="list-group-item d-flex justify-content-between align-items-start py-2 px-0 border-0">
                                <div class="me-auto">
                                    <div class="d-flex align-items-center">
                                        {% if etape.obligatoire %}
                                            <span class="badge bg-danger me-2" title="Obligatoire">*</span>
                                        {% else %}
                                            <span class="badge bg-secondary me-2" title="Optionnelle">o</span>
                                        {% endif %}
                                        <strong>{{ etape.titre }}</strong>
                                    </div>
                                    {% if etape.description %}
                                        <small class="text-muted">{{ etape.description }}</small>
                                    {% endif %}
                                </div>
                                {% if etape.documentId %}
                                    <span class="badge bg-info" title="Document associe">
                                        <i class="fa fa-file"></i>
                                    </span>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endif %}
