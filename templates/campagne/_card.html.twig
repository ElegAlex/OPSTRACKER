{# Card campagne active (en cours, a venir, preparation) #}
<div class="bg-white geo-accent geo-accent-{{ campagne.statutCouleur }} card-hover cursor-pointer"
     data-campaign-search-target="card"
     data-name="{{ campagne.nom }}"
     data-type="{{ campagne.typeOperation ? campagne.typeOperation.nom : '' }}"
     onclick="window.location='{{ path('app_dashboard_campagne', {id: campagne.id}) }}'">
    <div class="p-6">
        <div class="flex items-center gap-8">

            {# Infos #}
            <div class="flex items-center gap-5 flex-1 min-w-0">
                <div class="w-10 h-10 bg-{{ campagne.statutCouleur }}/10 flex items-center justify-center flex-shrink-0">
                    {% if campagne.typeOperation %}
                        <i data-feather="{{ campagne.typeOperation.icone }}" class="w-5 h-5 text-{{ campagne.statutCouleur }}"></i>
                    {% else %}
                        <i data-feather="layers" class="w-5 h-5 text-{{ campagne.statutCouleur }}"></i>
                    {% endif %}
                </div>
                <div class="min-w-0">
                    <div class="flex items-center gap-4 mb-2">
                        <h3 class="text-xl font-bold text-ink truncate">{{ campagne.nom }}</h3>
                        <span class="px-3 py-1 bg-{{ campagne.statutCouleur }} text-white text-[10px] font-bold uppercase tracking-wider">{{ campagne.statutLabel }}</span>
                    </div>
                    <div class="flex items-center gap-6 text-sm text-muted">
                        {% if campagne.typeOperation %}
                        <span class="flex items-center gap-2">
                            <i data-feather="{{ campagne.typeOperation.icone }}" class="w-4 h-4"></i>
                            {{ campagne.typeOperation.nom }}
                        </span>
                        {% endif %}
                        <span class="flex items-center gap-2">
                            <i data-feather="calendar" class="w-4 h-4"></i>
                            {{ campagne.dateDebut|date('d M') }} - {{ campagne.dateFin|date('d M Y') }}
                        </span>
                        {% if temps is defined and temps %}
                        <span class="flex items-center gap-2" title="Temps total declare">
                            <i data-feather="clock" class="w-4 h-4 text-purple-500"></i>
                            <span class="font-medium text-purple-700">{{ temps.formate }}</span>
                        </span>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Progression visuelle #}
            <div class="flex items-center gap-6 flex-shrink-0">
                <div class="w-48">
                    <div class="flex justify-between text-sm mb-2">
                        <span class="text-muted">Progression</span>
                        <span class="font-bold text-ink">{{ stats.progression|round }}%</span>
                    </div>
                    <div class="h-2 bg-paper">
                        <div class="h-full bg-{{ stats.progression >= 75 ? 'success' : (stats.progression >= 50 ? 'primary' : 'warning') }}" style="width: {{ stats.progression }}%"></div>
                    </div>
                    <div class="flex justify-between text-xs text-muted mt-1">
                        <span>{{ stats.realises }} realises</span>
                        <span>{{ stats.total }}</span>
                    </div>
                </div>
            </div>

            {# Stats en blocs #}
            <div class="flex items-center gap-1 flex-shrink-0">
                <div class="w-20 h-20 bg-success/10 flex flex-col items-center justify-center">
                    <span class="text-2xl font-bold num text-success">{{ stats.par_statut.realise|default(0) }}</span>
                    <span class="text-[9px] text-muted uppercase tracking-wider">Realises</span>
                </div>
                <div class="w-20 h-20 bg-primary/10 flex flex-col items-center justify-center">
                    <span class="text-2xl font-bold num text-primary">{{ stats.par_statut.planifie|default(0) }}</span>
                    <span class="text-[9px] text-muted uppercase tracking-wider">Planifies</span>
                </div>
                <div class="w-20 h-20 bg-warning/10 flex flex-col items-center justify-center">
                    <span class="text-2xl font-bold num text-warning">{{ stats.par_statut.reporte|default(0) }}</span>
                    <span class="text-[9px] text-muted uppercase tracking-wider">Reportes</span>
                </div>
            </div>

            {# Action dropdown #}
            <div class="relative flex-shrink-0" onclick="event.stopPropagation();">
                <button onclick="closeAllDropdowns(); this.nextElementSibling.classList.toggle('hidden'); this.closest('.card-hover').classList.toggle('dropdown-open')" class="w-10 h-10 border-2 border-ink/10 flex items-center justify-center text-muted hover:bg-ink hover:text-white hover:border-ink transition-colors">
                    <i data-feather="more-horizontal" class="w-5 h-5"></i>
                </button>
                <div class="hidden absolute right-0 top-12 w-48 bg-white border-2 border-ink shadow-lg z-50">
                    <a href="{{ path('app_dashboard_campagne', {id: campagne.id}) }}" class="flex items-center gap-3 px-4 py-3 text-sm hover:bg-paper transition-colors">
                        <i data-feather="bar-chart-2" class="w-4 h-4"></i>
                        Dashboard
                    </a>
                    <a href="{{ path('app_dashboard_campagne', {id: campagne.id}) }}" class="flex items-center gap-3 px-4 py-3 text-sm hover:bg-paper transition-colors">
                        <i data-feather="eye" class="w-4 h-4"></i>
                        Voir details
                    </a>
                    <a href="{{ path('app_campagne_step4', {id: campagne.id}) }}" class="flex items-center gap-3 px-4 py-3 text-sm hover:bg-paper transition-colors">
                        <i data-feather="settings" class="w-4 h-4"></i>
                        Configurer
                    </a>
                    <div class="border-t border-ink/10"></div>
                    <form action="{{ path('app_campagne_delete', {id: campagne.id}) }}" method="POST" onsubmit="return confirm('Supprimer la campagne « {{ campagne.nom|e('js') }} » et toutes ses operations ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('campagne_delete_' ~ campagne.id) }}">
                        <button type="submit" class="w-full flex items-center gap-3 px-4 py-3 text-sm text-danger hover:bg-danger/10 transition-colors">
                            <i data-feather="trash-2" class="w-4 h-4"></i>
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
