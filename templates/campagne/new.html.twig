{% extends 'campagne/_layout.html.twig' %}

{% block title %}Nouvelle campagne - OpsTracker{% endblock %}

{% block main %}
{# HEADER #}
<header class="bg-white px-12 py-10 border-b-4 border-ink">
    <div class="flex justify-between items-end">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 bg-primary"></div>
                <span class="text-xs font-semibold text-muted uppercase tracking-[0.15em]">Etape {{ step }}/4</span>
            </div>
            <h1 class="text-4xl font-bold tracking-tight">Nouvelle campagne</h1>
            <p class="text-muted mt-2">Informations generales</p>
        </div>
        <a href="{{ path('app_campagne_index') }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-muted hover:text-ink transition-colors">
            <i data-feather="arrow-left" class="w-4 h-4"></i>
            Retour
        </a>
    </div>
</header>

{# CONTENT #}
<div class="flex-1 overflow-auto">
    <div class="max-w-2xl mx-auto px-12 py-10">

        {# Progress steps #}
        <div class="flex items-center gap-4 mb-12">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-primary text-white flex items-center justify-center font-bold">1</div>
                <span class="text-sm font-medium text-ink">Infos</span>
            </div>
            <div class="flex-1 h-0.5 bg-ink/10"></div>
            <div class="flex items-center gap-3 opacity-50">
                <div class="w-10 h-10 border-2 border-ink/20 flex items-center justify-center font-bold text-muted">2</div>
                <span class="text-sm font-medium text-muted">Import</span>
            </div>
            <div class="flex-1 h-0.5 bg-ink/10"></div>
            <div class="flex items-center gap-3 opacity-50">
                <div class="w-10 h-10 border-2 border-ink/20 flex items-center justify-center font-bold text-muted">3</div>
                <span class="text-sm font-medium text-muted">Mapping</span>
            </div>
            <div class="flex-1 h-0.5 bg-ink/10"></div>
            <div class="flex items-center gap-3 opacity-50">
                <div class="w-10 h-10 border-2 border-ink/20 flex items-center justify-center font-bold text-muted">4</div>
                <span class="text-sm font-medium text-muted">Config</span>
            </div>
        </div>

        {# Form #}
        <div class="bg-white border-2 border-ink p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="space-y-6">
                {{ form_row(form.nom) }}
                {{ form_row(form.description) }}

                <div class="grid grid-cols-2 gap-6">
                    {{ form_row(form.dateDebut) }}
                    {{ form_row(form.dateFin) }}
                </div>
            </div>

            <div class="flex justify-end gap-4 pt-6 border-t-2 border-ink/10">
                <a href="{{ path('app_campagne_index') }}" class="px-6 py-3 text-sm font-semibold text-muted hover:text-ink transition-colors">
                    Annuler
                </a>
                <button type="submit" class="flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                    Suivant
                    <i data-feather="arrow-right" class="w-4 h-4"></i>
                </button>
            </div>

            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}
