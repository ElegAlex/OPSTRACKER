{% extends 'campagne/_layout.html.twig' %}

{% block title %}Import / Colonnes - {{ campagne.nom }} - OpsTracker{% endblock %}

{% block main %}
{# HEADER #}
<header class="bg-white px-12 py-10 border-b-4 border-ink">
    <div class="flex justify-between items-end">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 bg-primary"></div>
                <span class="text-xs font-semibold text-muted uppercase tracking-[0.15em]">Etape {{ step }}/4</span>
            </div>
            <h1 class="text-4xl font-bold tracking-tight">{{ campagne.nom }}</h1>
            <p class="text-muted mt-2">Import des operations ou definition des colonnes</p>
        </div>
        <a href="{{ path('app_campagne_index') }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-muted hover:text-ink transition-colors">
            <i data-feather="arrow-left" class="w-4 h-4"></i>
            Retour aux campagnes
        </a>
    </div>
</header>

{# CONTENT #}
<div class="flex-1 overflow-auto">
    <div class="max-w-4xl mx-auto px-12 py-10">

        {# Progress steps #}
        <div class="flex items-center gap-4 mb-12">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-success text-white flex items-center justify-center">
                    <i data-feather="check" class="w-5 h-5"></i>
                </div>
                <span class="text-sm font-medium text-success">Infos</span>
            </div>
            <div class="flex-1 h-0.5 bg-success"></div>
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-primary text-white flex items-center justify-center font-bold">2</div>
                <span class="text-sm font-medium text-ink">Colonnes</span>
            </div>
            <div class="flex-1 h-0.5 bg-ink/10"></div>
            <div class="flex items-center gap-3 opacity-50">
                <div class="w-10 h-10 border-2 border-ink/20 flex items-center justify-center font-bold text-muted">3</div>
                <span class="text-sm font-medium text-muted">Mapping</span>
            </div>
            <div class="flex-1 h-0.5 bg-ink/10"></div>
            <div class="flex items-center gap-3 opacity-50">
                <div class="w-10 h-10 border-2 border-ink/20 flex items-center justify-center font-bold text-muted">4</div>
                <span class="text-sm font-medium text-muted">Config</span>
            </div>
        </div>

        {# Recap campagne #}
        <div class="bg-paper border-2 border-ink/10 p-6 mb-8">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-primary/10 flex items-center justify-center">
                    <i data-feather="layers" class="w-6 h-6 text-primary"></i>
                </div>
                <div>
                    <h3 class="font-bold text-ink">{{ campagne.nom }}</h3>
                    <p class="text-sm text-muted">{{ campagne.dateDebut|date('d M Y') }} - {{ campagne.dateFin|date('d M Y') }}</p>
                </div>
            </div>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-8', 'enctype': 'multipart/form-data'}}) }}

        {# Deux options cote a cote #}
        <div class="grid grid-cols-2 gap-8">

            {# Option 1 : Import CSV #}
            <div class="bg-white border-2 border-ink p-8">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 bg-primary/10 flex items-center justify-center">
                        <i data-feather="upload-cloud" class="w-5 h-5 text-primary"></i>
                    </div>
                    <div>
                        <h2 class="text-lg font-bold text-ink">Option 1</h2>
                        <p class="text-sm text-muted">Importer un fichier CSV</p>
                    </div>
                </div>

                <div class="space-y-4">
                    <div class="bg-paper border-l-4 border-primary p-4">
                        <div class="flex items-start gap-3">
                            <i data-feather="info" class="w-5 h-5 text-primary mt-0.5"></i>
                            <div class="text-sm">
                                <p class="font-semibold text-ink mb-1">Format attendu</p>
                                <ul class="text-muted space-y-1">
                                    <li>Fichier <strong>.csv</strong> avec en-tetes</li>
                                    <li>Separateur auto-detecte</li>
                                    <li>Max <strong>100 000 lignes</strong></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="border-2 border-dashed border-ink/20 hover:border-ink/40 transition-colors p-6 text-center">
                        <div class="flex flex-col items-center gap-3">
                            <i data-feather="file-text" class="w-8 h-8 text-muted"></i>
                            <p class="text-sm text-muted">Selectionnez un fichier CSV</p>
                            {{ form_widget(form.csvFile) }}
                        </div>
                    </div>

                    <p class="text-xs text-muted text-center">
                        Toutes les colonnes du CSV seront automatiquement creees comme champs de la campagne.
                    </p>
                </div>
            </div>

            {# Option 2 : Creation manuelle #}
            <div class="bg-white border-2 border-ink/30 p-8">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 bg-ink/10 flex items-center justify-center">
                        <i data-feather="edit-3" class="w-5 h-5 text-ink"></i>
                    </div>
                    <div>
                        <h2 class="text-lg font-bold text-ink">Option 2</h2>
                        <p class="text-sm text-muted">Definir les colonnes manuellement</p>
                    </div>
                </div>

                <div class="space-y-4">
                    <div class="bg-paper border-l-4 border-ink/30 p-4">
                        <div class="flex items-start gap-3">
                            <i data-feather="info" class="w-5 h-5 text-muted mt-0.5"></i>
                            <div class="text-sm">
                                <p class="font-semibold text-ink mb-1">Sans fichier CSV</p>
                                <p class="text-muted">
                                    Definissez les colonnes de votre campagne, puis ajoutez les operations manuellement.
                                </p>
                            </div>
                        </div>
                    </div>

                    {{ form_widget(form.colonnes_manuelles) }}

                    <p class="text-xs text-muted text-center">
                        Une colonne par ligne. Les operations pourront etre ajoutees manuellement apres creation.
                    </p>
                </div>
            </div>

        </div>

        {# Actions #}
        <div class="flex justify-between items-center gap-4 pt-6 border-t-2 border-ink/10">
            <a href="{{ path('app_campagne_step4', {id: campagne.id}) }}" class="px-6 py-3 text-sm font-semibold text-muted hover:text-ink transition-colors">
                Passer cette etape
            </a>
            <button type="submit" class="flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                Suivant
                <i data-feather="arrow-right" class="w-4 h-4"></i>
            </button>
        </div>

        {{ form_end(form) }}

    </div>
</div>
{% endblock %}
