{% extends 'campagne/_layout.html.twig' %}

{% block title %}{{ campagne.nom }} - OpsTracker{% endblock %}

{% block main %}
{# HEADER #}
<header class="bg-white px-12 py-10 border-b-4 border-ink">
    <div class="flex justify-between items-start">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 bg-{{ campagne.statutCouleur }}"></div>
                <span class="text-xs font-semibold text-muted uppercase tracking-[0.15em]">Campagne</span>
                <span class="px-3 py-1 bg-{{ campagne.statutCouleur }} text-white text-[10px] font-bold uppercase tracking-wider">{{ campagne.statutLabel }}</span>
            </div>
            <h1 class="text-4xl font-bold tracking-tight">{{ campagne.nom }}</h1>
            <div class="flex items-center gap-6 mt-3 text-sm text-muted">
                <span class="flex items-center gap-2">
                    <i data-feather="calendar" class="w-4 h-4"></i>
                    {{ campagne.dateDebut|date('d M Y') }} - {{ campagne.dateFin|date('d M Y') }}
                </span>
                {% if campagne.typeOperation %}
                <span class="flex items-center gap-2">
                    <i data-feather="{{ campagne.typeOperation.icone }}" class="w-4 h-4"></i>
                    {{ campagne.typeOperation.nom }}
                </span>
                {% endif %}
            </div>
        </div>
        <div class="flex items-center gap-4">
            <a href="{{ path('app_campagne_index') }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-muted hover:text-ink transition-colors">
                <i data-feather="arrow-left" class="w-4 h-4"></i>
                Retour
            </a>
            {% if transitions|length > 0 %}
            <div class="flex gap-2">
                {% for transition in transitions %}
                <form action="{{ path('app_campagne_transition', {id: campagne.id, transition: transition}) }}" method="post" class="inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('campagne_transition_' ~ campagne.id) }}">
                    <button type="submit" class="flex items-center gap-2 px-4 py-2 text-sm font-semibold border-2 border-ink hover:bg-ink hover:text-white transition-colors">
                        {{ transition|replace({'_': ' '})|capitalize }}
                    </button>
                </form>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
</header>

{# CONTENT #}
<div class="flex-1 overflow-auto">
    <div class="px-12 py-10">

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : 'danger' }}/10 flex items-center gap-3">
                    <i data-feather="{{ label == 'success' ? 'check-circle' : 'alert-circle' }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : 'danger' }}"></i>
                    <span class="text-sm font-medium">{{ message }}</span>
                </div>
            {% endfor %}
        {% endfor %}

        {# KPIs #}
        <div class="grid grid-cols-12 gap-6 mb-10">
            {# Total operations #}
            <div class="col-span-3 bg-white border-2 border-ink p-6">
                <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-2">Total operations</p>
                <p class="text-4xl font-bold num text-ink">{{ statistiques.total }}</p>
            </div>

            {# Progression #}
            <div class="col-span-3 bg-white border-2 border-ink p-6">
                <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-2">Progression</p>
                <div class="flex items-baseline gap-1">
                    <span class="text-4xl font-bold num text-ink">{{ statistiques.progression|round }}</span>
                    <span class="text-xl font-bold text-muted">%</span>
                </div>
                <div class="h-2 bg-paper mt-2">
                    <div class="h-full bg-success" style="width: {{ statistiques.progression }}%"></div>
                </div>
            </div>

            {# Realises #}
            <div class="col-span-3 bg-white border-2 border-ink p-6">
                <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-2">Realises</p>
                <p class="text-4xl font-bold num text-success">{{ statistiques.realises }}</p>
            </div>

            {# Reportes #}
            <div class="col-span-3 bg-white border-2 border-ink p-6">
                <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-2">Reportes / A remedier</p>
                <p class="text-4xl font-bold num text-warning">{{ statistiques.par_statut.reporte|default(0) + statistiques.par_statut.a_remedier|default(0) }}</p>
            </div>
        </div>

        {# Quick actions #}
        <div class="grid grid-cols-3 gap-6 mb-8">
            <a href="{{ path('app_operation_index', {campagne: campagne.id}) }}" class="bg-white border-2 border-ink p-6 hover:bg-paper transition-colors group">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-primary/10 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-colors">
                        <i data-feather="list" class="w-6 h-6 text-primary group-hover:text-white"></i>
                    </div>
                    <div>
                        <p class="font-bold text-ink">Operations</p>
                        <p class="text-sm text-muted">Voir et gerer les {{ statistiques.total }} operations</p>
                    </div>
                </div>
            </a>
            <a href="{{ path('app_segment_index', {campagne: campagne.id}) }}" class="bg-white border-2 border-ink p-6 hover:bg-paper transition-colors group">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-success/10 flex items-center justify-center group-hover:bg-success group-hover:text-white transition-colors">
                        <i data-feather="grid" class="w-6 h-6 text-success group-hover:text-white"></i>
                    </div>
                    <div>
                        <p class="font-bold text-ink">Segments</p>
                        <p class="text-sm text-muted">Progression par segment</p>
                    </div>
                </div>
            </a>
            <a href="{{ path('app_campagne_step4', {id: campagne.id}) }}" class="bg-white border-2 border-ink p-6 hover:bg-paper transition-colors group">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-ink/10 flex items-center justify-center group-hover:bg-ink group-hover:text-white transition-colors">
                        <i data-feather="settings" class="w-6 h-6 text-ink group-hover:text-white"></i>
                    </div>
                    <div>
                        <p class="font-bold text-ink">Configuration</p>
                        <p class="text-sm text-muted">Type et checklist template</p>
                    </div>
                </div>
            </a>
        </div>

        {# Actions + Operations #}
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-ink">Dernieres operations</h2>
            <div class="flex items-center gap-4">
                <a href="{{ path('app_campagne_export', {id: campagne.id}) }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium border-2 border-ink/20 hover:border-ink transition-colors">
                    <i data-feather="download" class="w-4 h-4"></i>
                    Exporter CSV
                </a>
                <a href="{{ path('app_operation_index', {campagne: campagne.id}) }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium border-2 border-ink/20 hover:border-ink transition-colors">
                    <i data-feather="list" class="w-4 h-4"></i>
                    Voir tout
                </a>
                <a href="{{ path('app_campagne_operation_new', {id: campagne.id}) }}" class="flex items-center gap-2 px-4 py-2 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                    <i data-feather="plus" class="w-4 h-4"></i>
                    Ajouter
                </a>
            </div>
        </div>

        {# Liste operations #}
        {% if campagne.operations|length > 0 %}
        <div class="bg-white border-2 border-ink overflow-hidden">
            <table class="w-full">
                <thead class="bg-paper border-b-2 border-ink">
                    <tr>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Matricule</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Nom</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Statut</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Technicien</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4"></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-ink/10">
                    {% for operation in campagne.operations %}
                    <tr class="hover:bg-paper/50 transition-colors">
                        <td class="px-6 py-4 text-sm font-medium text-ink">{{ operation.matricule }}</td>
                        <td class="px-6 py-4 text-sm text-ink">{{ operation.nom }}</td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 bg-{{ operation.statutCouleur }}/10 text-{{ operation.statutCouleur }} text-xs font-bold uppercase tracking-wider">
                                {{ operation.statutLabel }}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-sm text-muted">
                            {% if operation.technicienAssigne %}
                                {{ operation.technicienAssigne.prenom }} {{ operation.technicienAssigne.nom }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-muted">
                            {{ operation.datePlanifiee ? operation.datePlanifiee|date('d/m/Y') : '-' }}
                        </td>
                        <td class="px-6 py-4 text-right">
                            <button class="w-8 h-8 border border-ink/10 inline-flex items-center justify-center text-muted hover:bg-ink hover:text-white hover:border-ink transition-colors">
                                <i data-feather="more-horizontal" class="w-4 h-4"></i>
                            </button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="bg-white border-2 border-ink/20 border-dashed p-12 text-center">
            <div class="w-16 h-16 mx-auto bg-primary/10 flex items-center justify-center mb-4">
                <i data-feather="inbox" class="w-8 h-8 text-primary"></i>
            </div>
            <h3 class="text-lg font-bold text-ink mb-2">Aucune operation</h3>
            <p class="text-sm text-muted mb-6">Commencez par ajouter des operations a cette campagne.</p>
            <a href="{{ path('app_campagne_operation_new', {id: campagne.id}) }}" class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                <i data-feather="plus" class="w-4 h-4"></i>
                Ajouter une operation
            </a>
        </div>
        {% endif %}

    </div>
</div>
{% endblock %}
