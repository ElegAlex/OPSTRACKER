{% extends 'campagne/_layout.html.twig' %}

{% block title %}Campagnes - OpsTracker{% endblock %}

{% block main %}
{# HEADER - Asymetrique, bold #}
<header class="bg-white px-12 py-10 border-b-4 border-ink">
    <div class="flex justify-between items-end">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 bg-primary"></div>
                <span class="text-xs font-semibold text-muted uppercase tracking-[0.15em]">Portefeuille</span>
            </div>
            <h1 class="text-5xl font-bold tracking-tight">Campagnes</h1>
        </div>
        <div class="flex items-center gap-5">
            <div class="relative">
                <input type="text" placeholder="Rechercher..."
                       class="w-64 px-5 py-3 text-sm bg-paper border-2 border-transparent focus:border-ink focus:bg-white outline-none transition-all">
                <i data-feather="search" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-muted"></i>
            </div>
            <a href="{{ path('app_campagne_new') }}" data-turbo="false" class="flex items-center gap-3 px-6 py-3 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors cursor-pointer">
                <i data-feather="plus" class="w-4 h-4 pointer-events-none"></i>
                <span>Nouvelle campagne</span>
            </a>
        </div>
    </div>
</header>

{# CONTENT #}
<div class="flex-1 overflow-auto">
    <div class="px-12 py-10">

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : 'danger' }}/10 flex items-center gap-3">
                    <i data-feather="{{ label == 'success' ? 'check-circle' : 'alert-circle' }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : 'danger' }}"></i>
                    <span class="text-sm font-medium">{{ message }}</span>
                </div>
            {% endfor %}
        {% endfor %}

        {# ========================================
           KPI BLOCKS - Composition Bauhaus
           ======================================== #}
        <div class="grid grid-cols-12 gap-6 mb-16">

            {# KPI 1 - Total campagnes #}
            <div class="col-span-4 bg-white border-2 border-ink p-8 relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-2 bg-primary"></div>
                <div class="absolute -right-8 -bottom-8 w-32 h-32 bg-primary/5"></div>
                <div class="relative z-10">
                    <p class="text-xs font-semibold text-muted uppercase tracking-[0.15em] mb-4">Total campagnes</p>
                    <p class="text-7xl font-bold num text-ink">{{ statistiques.total_campagnes }}</p>
                    <div class="flex items-center gap-6 mt-6 pt-6 border-t-2 border-ink/10">
                        <span class="flex items-center gap-2 text-sm">
                            <span class="w-3 h-3 bg-success"></span>
                            {{ statistiques.actives }} actives
                        </span>
                        <span class="flex items-center gap-2 text-sm">
                            <span class="w-3 h-3 bg-complete"></span>
                            {{ statistiques.terminees }} terminees
                        </span>
                        <span class="flex items-center gap-2 text-sm">
                            <span class="w-3 h-3 bg-ink/20"></span>
                            {{ statistiques.archivees }} archivees
                        </span>
                    </div>
                </div>
            </div>

            {# KPI 2 - Operations actives #}
            <div class="col-span-4 bg-white p-8 border-2 border-ink relative">
                <div class="absolute top-0 left-0 w-full h-2 bg-primary"></div>
                <div class="flex items-start justify-between">
                    <div>
                        <p class="text-xs font-semibold text-muted uppercase tracking-[0.15em] mb-4">Operations actives</p>
                        <p class="text-6xl font-bold num text-ink">{{ statistiques.operations_actives|number_format(0, ',', ' ') }}</p>
                        <p class="text-sm text-muted mt-4">reparties sur {{ statistiques.actives }} campagnes</p>
                    </div>
                    <div class="w-20 h-20 bg-primary/10 flex items-center justify-center">
                        <i data-feather="target" class="w-8 h-8 text-primary"></i>
                    </div>
                </div>
            </div>

            {# KPI 3 - Progression globale #}
            <div class="col-span-4 bg-white border-2 border-ink p-8 relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-2 bg-success"></div>
                <div class="relative z-10">
                    <p class="text-xs font-semibold text-muted uppercase tracking-[0.15em] mb-4">Avancement global</p>
                    <div class="flex items-baseline gap-2 mb-6">
                        <span class="text-7xl font-bold num text-ink">{{ statistiques.progression_globale|round }}</span>
                        <span class="text-3xl font-bold text-muted">%</span>
                    </div>
                    <div class="h-3 bg-paper">
                        <div class="h-full bg-success" style="width: {{ statistiques.progression_globale }}%"></div>
                    </div>
                    <p class="text-sm text-muted mt-3">{{ statistiques.operations_realisees|number_format(0, ',', ' ') }} / {{ statistiques.operations_actives|number_format(0, ',', ' ') }} operations realisees</p>
                </div>
            </div>
        </div>

        {# ========================================
           SECTIONS PAR STATUT
           ======================================== #}

        {# Section PREPARATION + A_VENIR + EN_COURS = Actives #}
        {% set actives = [] %}
        {% for statut in ['en_cours', 'a_venir', 'preparation'] %}
            {% set actives = actives|merge(campagnes_groupees[statut].campagnes) %}
        {% endfor %}

        {% if actives|length > 0 %}
        <section class="mb-12" id="section-actives">
            <button onclick="toggleSection('actives')" class="flex items-center gap-4 mb-8 group w-full text-left">
                <i data-feather="chevron-down" class="w-5 h-5 text-muted chevron"></i>
                <span class="text-sm font-bold text-ink uppercase tracking-[0.15em]">Actives</span>
                <div class="flex-1 h-0.5 bg-ink/10"></div>
                <span class="w-8 h-8 bg-success text-white text-sm font-bold flex items-center justify-center">{{ actives|length }}</span>
            </button>

            <div class="section-content space-y-4">
                {% for campagne in actives %}
                    {% set stats = stats_par_campagne[campagne.id] %}
                    {% include 'campagne/_card.html.twig' with {campagne: campagne, stats: stats} %}
                {% endfor %}
            </div>
        </section>
        {% endif %}

        {# Section TERMINEE #}
        {% set terminees = campagnes_groupees['terminee'].campagnes %}
        {% if terminees|length > 0 %}
        <section class="mb-12" id="section-terminees">
            <button onclick="toggleSection('terminees')" class="flex items-center gap-4 mb-8 group w-full text-left">
                <i data-feather="chevron-down" class="w-5 h-5 text-muted chevron"></i>
                <span class="text-sm font-bold text-ink uppercase tracking-[0.15em]">Terminees</span>
                <div class="flex-1 h-0.5 bg-ink/10"></div>
                <span class="w-8 h-8 bg-complete text-white text-sm font-bold flex items-center justify-center">{{ terminees|length }}</span>
            </button>

            <div class="section-content space-y-3">
                {% for campagne in terminees %}
                    {% set stats = stats_par_campagne[campagne.id] %}
                    {% include 'campagne/_card_compact.html.twig' with {campagne: campagne, stats: stats} %}
                {% endfor %}
            </div>
        </section>
        {% endif %}

        {# Section ARCHIVEE (collapsed par defaut) #}
        {% set archivees = campagnes_groupees['archivee'].campagnes %}
        {% if archivees|length > 0 %}
        <section class="mb-12 section-collapsed" id="section-archivees">
            <button onclick="toggleSection('archivees')" class="flex items-center gap-4 mb-8 group w-full text-left">
                <i data-feather="chevron-down" class="w-5 h-5 text-muted chevron"></i>
                <span class="text-sm font-bold text-muted uppercase tracking-[0.15em]">Archivees</span>
                <div class="flex-1 h-0.5 bg-ink/5"></div>
                <span class="w-8 h-8 bg-ink/10 text-muted text-sm font-bold flex items-center justify-center">{{ archivees|length }}</span>
            </button>

            <div class="section-content space-y-3">
                {% for campagne in archivees %}
                    {% set stats = stats_par_campagne[campagne.id] %}
                    {% include 'campagne/_card_archived.html.twig' with {campagne: campagne, stats: stats} %}
                {% endfor %}
            </div>
        </section>
        {% endif %}

        {# Message si aucune campagne #}
        {% if statistiques.total_campagnes == 0 %}
        <div class="text-center py-20">
            <div class="w-20 h-20 mx-auto bg-primary/10 flex items-center justify-center mb-6">
                <i data-feather="layers" class="w-10 h-10 text-primary"></i>
            </div>
            <h2 class="text-2xl font-bold text-ink mb-3">Aucune campagne</h2>
            <p class="text-muted mb-8">Commencez par creer votre premiere campagne.</p>
            <a href="{{ path('app_campagne_new') }}" class="inline-flex items-center gap-3 px-8 py-4 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                <i data-feather="plus" class="w-4 h-4"></i>
                Creer une campagne
            </a>
        </div>
        {% endif %}

    </div>
</div>

<script>
    function toggleSection(sectionId) {
        const section = document.getElementById('section-' + sectionId);
        section.classList.toggle('section-collapsed');
    }
</script>
{% endblock %}
