{% extends 'base.html.twig' %}

{% block title %}Reservation - {{ campagne.nom }} - OpsTracker{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col">
    {# HEADER PUBLIC #}
    <header class="bg-ink text-white px-8 py-6">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center justify-between">
                <div>
                    <span class="text-xs font-semibold uppercase tracking-wider text-white/60">OpsTracker</span>
                    <h1 class="text-xl font-bold">{{ campagne.nom }}</h1>
                </div>
                <div class="text-right">
                    <span class="text-sm text-white/60">Bonjour,</span>
                    <p class="font-semibold">{{ agent.nomComplet }}</p>
                </div>
            </div>
        </div>
    </header>

    {# MAIN CONTENT #}
    <main class="flex-1 px-8 py-10">
        <div class="max-w-4xl mx-auto">

            {# Flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}/10 flex items-center gap-3">
                        <i data-feather="{{ label == 'success' ? 'check-circle' : (label == 'warning' ? 'alert-triangle' : (label == 'info' ? 'info' : 'alert-circle')) }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}"></i>
                        <span class="text-sm font-medium">{{ message }}</span>
                    </div>
                {% endfor %}
            {% endfor %}

            {# SI RESERVATION EXISTANTE #}
            {% if reservation %}
            <div class="bg-white border-2 border-ink p-8 mb-8">
                <div class="flex items-start gap-6">
                    <div class="w-16 h-16 bg-success/10 flex items-center justify-center shrink-0">
                        <i data-feather="check-circle" class="w-8 h-8 text-success"></i>
                    </div>
                    <div class="flex-1">
                        <h2 class="text-xl font-bold text-ink mb-1">Vous avez deja un creneau reserve</h2>
                        <p class="text-muted mb-4">Votre rendez-vous est confirme pour :</p>

                        <div class="bg-paper p-6 mb-6">
                            <div class="grid grid-cols-3 gap-6">
                                <div>
                                    <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-1">Date</p>
                                    <p class="text-lg font-bold">{{ reservation.creneau.date|date('d/m/Y') }}</p>
                                    <p class="text-sm text-muted">{{ reservation.creneau.date|date('l') }}</p>
                                </div>
                                <div>
                                    <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-1">Horaire</p>
                                    <p class="text-lg font-bold">{{ reservation.creneau.heureDebut|date('H:i') }} - {{ reservation.creneau.heureFin|date('H:i') }}</p>
                                </div>
                                <div>
                                    <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-1">Lieu</p>
                                    <p class="text-lg font-bold">{{ reservation.creneau.lieu ?? 'Non specifie' }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            {% if not reservation.creneau.verrouillePourDate %}
                            <a href="{{ path('app_booking_modify', {token: token}) }}" class="flex items-center gap-2 px-6 py-3 text-sm font-semibold text-ink border-2 border-ink hover:bg-ink hover:text-white transition-colors">
                                <i data-feather="edit" class="w-4 h-4"></i>
                                Modifier
                            </a>
                            <form action="{{ path('app_booking_cancel', {token: token}) }}" method="post" class="inline" onsubmit="return confirm('Etes-vous sur de vouloir annuler votre reservation ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('booking_cancel') }}">
                                <button type="submit" class="flex items-center gap-2 px-6 py-3 text-sm font-semibold text-danger border-2 border-danger hover:bg-danger hover:text-white transition-colors">
                                    <i data-feather="x-circle" class="w-4 h-4"></i>
                                    Annuler
                                </button>
                            </form>
                            {% else %}
                            <span class="flex items-center gap-2 px-4 py-2 bg-muted/10 text-muted text-sm">
                                <i data-feather="lock" class="w-4 h-4"></i>
                                Ce creneau est verrouille et ne peut plus etre modifie
                            </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% else %}

            {# HEADER SELECTION #}
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-ink mb-2">Choisissez votre creneau</h2>
                <p class="text-muted">Selectionnez un creneau disponible pour votre intervention. Une fois reserve, vous recevrez une confirmation par email.</p>
            </div>

            {# LISTE DES CRENEAUX #}
            {% if creneaux_par_date|length > 0 %}
                {% for dateKey, dateGroup in creneaux_par_date %}
                <div class="mb-8">
                    <h3 class="flex items-center gap-3 text-lg font-bold mb-4">
                        <i data-feather="calendar" class="w-5 h-5 text-primary"></i>
                        {{ dateGroup.date|date('l d F Y') }}
                    </h3>

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for creneau in dateGroup.creneaux %}
                        {% set isComplet = creneau.complet %}
                        <div class="bg-white border-2 {{ isComplet ? 'border-ink/20 opacity-60' : 'border-ink hover:border-primary' }} p-6 transition-colors">
                            <div class="flex items-start justify-between mb-4">
                                <div>
                                    <p class="text-xl font-bold text-ink">
                                        {{ creneau.heureDebut|date('H:i') }} - {{ creneau.heureFin|date('H:i') }}
                                    </p>
                                    <p class="text-sm text-muted">{{ creneau.dureeMinutes }} minutes</p>
                                </div>
                                {% if isComplet %}
                                <span class="px-2 py-1 bg-danger/10 text-danger text-xs font-bold uppercase">Complet</span>
                                {% else %}
                                <span class="px-2 py-1 bg-success/10 text-success text-xs font-bold uppercase">Disponible</span>
                                {% endif %}
                            </div>

                            <div class="mb-4">
                                <p class="text-sm text-muted">
                                    <i data-feather="map-pin" class="w-4 h-4 inline"></i>
                                    {{ creneau.lieu ?? 'Lieu non specifie' }}
                                </p>
                                <p class="text-sm text-muted mt-1">
                                    <i data-feather="users" class="w-4 h-4 inline"></i>
                                    {{ creneau.placesRestantes }} place{{ creneau.placesRestantes > 1 ? 's' : '' }} restante{{ creneau.placesRestantes > 1 ? 's' : '' }}
                                </p>
                            </div>

                            {% if not isComplet %}
                            <form action="{{ path('app_booking_select', {token: token, creneau: creneau.id}) }}" method="post">
                                <input type="hidden" name="_token" value="{{ csrf_token('booking_select_' ~ creneau.id) }}">
                                <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-3 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                                    <i data-feather="check" class="w-4 h-4"></i>
                                    Choisir ce creneau
                                </button>
                            </form>
                            {% else %}
                            <button disabled class="w-full flex items-center justify-center gap-2 px-4 py-3 text-sm font-semibold text-muted bg-paper cursor-not-allowed">
                                Creneau complet
                            </button>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endfor %}
            {% else %}
            <div class="bg-white border-2 border-ink/20 border-dashed p-12 text-center">
                <div class="w-16 h-16 mx-auto bg-warning/10 flex items-center justify-center mb-4">
                    <i data-feather="calendar" class="w-8 h-8 text-warning"></i>
                </div>
                <h3 class="text-lg font-bold text-ink mb-2">Aucun creneau disponible</h3>
                <p class="text-sm text-muted">Il n'y a plus de creneaux disponibles pour cette campagne. Contactez votre gestionnaire pour plus d'informations.</p>
            </div>
            {% endif %}

            {% endif %}

        </div>
    </main>

    {# FOOTER #}
    <footer class="bg-paper border-t-2 border-ink/10 px-8 py-6">
        <div class="max-w-4xl mx-auto text-center text-sm text-muted">
            <p>OpsTracker - Gestion des interventions</p>
        </div>
    </footer>
</div>
{% endblock %}
