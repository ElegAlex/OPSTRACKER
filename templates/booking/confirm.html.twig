{% extends 'base.html.twig' %}

{% block title %}Reservation confirmee - {{ campagne.nom }} - OpsTracker{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col">
    {# HEADER PUBLIC #}
    <header class="bg-ink text-white px-8 py-6">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center justify-between">
                <div>
                    <span class="text-xs font-semibold uppercase tracking-wider text-white/60">OpsTracker</span>
                    <h1 class="text-xl font-bold">{{ campagne.nom }}</h1>
                </div>
                <div class="text-right">
                    <span class="text-sm text-white/60">Bonjour,</span>
                    <p class="font-semibold">{{ agent.nomComplet }}</p>
                </div>
            </div>
        </div>
    </header>

    {# MAIN CONTENT #}
    <main class="flex-1 px-8 py-10">
        <div class="max-w-2xl mx-auto">

            {# Flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}/10 flex items-center gap-3">
                        <i data-feather="{{ label == 'success' ? 'check-circle' : (label == 'warning' ? 'alert-triangle' : (label == 'info' ? 'info' : 'alert-circle')) }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}"></i>
                        <span class="text-sm font-medium">{{ message }}</span>
                    </div>
                {% endfor %}
            {% endfor %}

            {# CONFIRMATION BOX #}
            <div class="bg-white border-4 border-success p-8 text-center mb-8">
                <div class="w-20 h-20 mx-auto bg-success/10 flex items-center justify-center mb-6">
                    <i data-feather="check-circle" class="w-10 h-10 text-success"></i>
                </div>
                <h2 class="text-2xl font-bold text-ink mb-2">Votre creneau est reserve</h2>
                <p class="text-muted mb-6">Vous recevrez un email de confirmation avec un fichier ICS pour ajouter ce rendez-vous a votre calendrier.</p>
            </div>

            {# DETAILS RESERVATION #}
            <div class="bg-white border-2 border-ink p-8 mb-8">
                <h3 class="text-lg font-bold text-ink mb-6 flex items-center gap-2">
                    <i data-feather="info" class="w-5 h-5 text-primary"></i>
                    Details de votre reservation
                </h3>

                <div class="space-y-6">
                    <div class="flex items-start gap-4 pb-4 border-b border-ink/10">
                        <div class="w-10 h-10 bg-primary/10 flex items-center justify-center shrink-0">
                            <i data-feather="calendar" class="w-5 h-5 text-primary"></i>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-muted uppercase tracking-wider">Date</p>
                            <p class="text-lg font-bold text-ink">{{ reservation.creneau.date|date('l d F Y') }}</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4 pb-4 border-b border-ink/10">
                        <div class="w-10 h-10 bg-primary/10 flex items-center justify-center shrink-0">
                            <i data-feather="clock" class="w-5 h-5 text-primary"></i>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-muted uppercase tracking-wider">Horaire</p>
                            <p class="text-lg font-bold text-ink">{{ reservation.creneau.heureDebut|date('H:i') }} - {{ reservation.creneau.heureFin|date('H:i') }}</p>
                            <p class="text-sm text-muted">Duree : {{ reservation.creneau.dureeMinutes }} minutes</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-primary/10 flex items-center justify-center shrink-0">
                            <i data-feather="map-pin" class="w-5 h-5 text-primary"></i>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-muted uppercase tracking-wider">Lieu</p>
                            <p class="text-lg font-bold text-ink">{{ reservation.creneau.lieu ?? 'Non specifie' }}</p>
                        </div>
                    </div>
                </div>
            </div>

            {# ACTIONS #}
            <div class="flex flex-col sm:flex-row items-center gap-4">
                {% if not reservation.creneau.verrouillePourDate %}
                <a href="{{ path('app_booking_modify', {token: token}) }}" class="w-full sm:w-auto flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-ink border-2 border-ink hover:bg-ink hover:text-white transition-colors">
                    <i data-feather="edit" class="w-4 h-4"></i>
                    Modifier ma reservation
                </a>
                <form action="{{ path('app_booking_cancel', {token: token}) }}" method="post" class="w-full sm:w-auto" onsubmit="return confirm('Etes-vous sur de vouloir annuler votre reservation ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('booking_cancel') }}">
                    <button type="submit" class="w-full flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-danger border-2 border-danger hover:bg-danger hover:text-white transition-colors">
                        <i data-feather="x-circle" class="w-4 h-4"></i>
                        Annuler ma reservation
                    </button>
                </form>
                {% else %}
                <div class="w-full p-4 bg-muted/10 text-center">
                    <p class="flex items-center justify-center gap-2 text-sm text-muted">
                        <i data-feather="lock" class="w-4 h-4"></i>
                        Ce creneau est verrouille et ne peut plus etre modifie
                    </p>
                </div>
                {% endif %}
            </div>

            <div class="mt-8 text-center">
                <a href="{{ path('app_booking_index', {token: token}) }}" class="text-sm text-primary hover:underline">
                    Retour a l'accueil
                </a>
            </div>

        </div>
    </main>

    {# FOOTER #}
    <footer class="bg-paper border-t-2 border-ink/10 px-8 py-6">
        <div class="max-w-4xl mx-auto text-center text-sm text-muted">
            <p>OpsTracker - Gestion des interventions</p>
        </div>
    </footer>
</div>
{% endblock %}
