{% extends 'base.html.twig' %}

{% block title %}Page non disponible - OpsTracker{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col bg-paper">
    {# HEADER #}
    <header class="bg-ink text-white px-6 py-4">
        <div class="max-w-2xl mx-auto">
            <span class="text-xs font-semibold uppercase tracking-wider text-white/60">OpsTracker</span>
            <h1 class="text-lg font-bold">Reservation</h1>
        </div>
    </header>

    {# MAIN CONTENT #}
    <main class="flex-1 flex items-center justify-center px-6 py-8">
        <div class="max-w-md w-full">
            <div class="bg-white border-2 border-danger/30 overflow-hidden">
                <div class="bg-danger/10 px-6 py-8 text-center">
                    <div class="w-16 h-16 bg-danger flex items-center justify-center mx-auto mb-4">
                        <i data-feather="alert-circle" class="w-8 h-8 text-white"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-ink mb-2">Page non disponible</h2>
                    <p class="text-muted">
                        {{ message|default('Cette page de reservation n\'est pas disponible.') }}
                    </p>
                </div>

                <div class="p-6">
                    <p class="text-sm text-muted text-center">
                        Si vous pensez qu'il s'agit d'une erreur, contactez votre gestionnaire.
                    </p>
                </div>
            </div>
        </div>
    </main>

    {# FOOTER #}
    <footer class="bg-white border-t-2 border-ink/10 px-6 py-4">
        <div class="max-w-2xl mx-auto text-center text-xs text-muted">
            <p>OpsTracker - Gestion des interventions</p>
        </div>
    </footer>
</div>
{% endblock %}
