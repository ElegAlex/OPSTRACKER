{% extends 'booking/public/_layout.html.twig' %}

{% block page_title %}Modifier{% endblock %}

{% block main %}
{# Header #}
<div class="mb-6">
    <a href="{{ path('app_public_booking_index', {token: token}) }}" class="text-sm text-primary hover:underline">
        <i data-feather="arrow-left" class="w-4 h-4 inline"></i>
        Retour
    </a>
</div>

<div class="mb-8">
    <h2 class="text-2xl font-bold text-ink mb-2">Modifier votre creneau</h2>
    <p class="text-muted">Selectionnez un nouveau creneau pour remplacer votre reservation actuelle</p>
</div>

{# Creneau actuel #}
<div class="bg-primary/5 border-2 border-primary/20 p-4 mb-8">
    <p class="text-xs font-semibold text-primary uppercase tracking-wider mb-2">Creneau actuel</p>
    <p class="font-bold text-ink">
        {{ reservation.creneau.date|format_date('full', locale='fr') }}
        de {{ reservation.creneau.heureDebut|date('H:i') }} a {{ reservation.creneau.heureFin|date('H:i') }}
    </p>
    {% if reservation.creneau.lieu %}
    <p class="text-sm text-muted">{{ reservation.creneau.lieu }}</p>
    {% endif %}
</div>

{# Liste des creneaux disponibles #}
{% if creneaux_par_date|length > 0 %}
    <form method="POST">
        <input type="hidden" name="_token" value="{{ csrf_token('public_booking_modify') }}">

        {% for dateKey, dateGroup in creneaux_par_date %}
        <div class="mb-6">
            <h3 class="flex items-center gap-3 text-sm font-bold uppercase tracking-wider text-muted mb-4">
                <i data-feather="calendar" class="w-4 h-4 text-primary"></i>
                {{ dateGroup.date|format_date('full', locale='fr') }}
            </h3>

            <div class="space-y-2">
                {% for creneau in dateGroup.creneaux %}
                {% set isComplet = creneau.complet %}
                {% if not isComplet %}
                <label class="block bg-white border-2 border-ink/20 hover:border-primary p-4 cursor-pointer transition-colors has-[:checked]:border-primary has-[:checked]:bg-primary/5">
                    <div class="flex items-center gap-4">
                        <input type="radio" name="creneau" value="{{ creneau.id }}" required
                               class="w-5 h-5 text-primary border-2 border-ink/30 focus:ring-primary">
                        <div class="flex-1">
                            <p class="font-bold text-ink">
                                {{ creneau.heureDebut|date('H:i') }} - {{ creneau.heureFin|date('H:i') }}
                            </p>
                            {% if creneau.lieu %}
                            <p class="text-sm text-muted">{{ creneau.lieu }}</p>
                            {% endif %}
                        </div>
                        <span class="text-xs text-success font-medium">
                            {{ creneau.placesRestantes }} place{{ creneau.placesRestantes > 1 ? 's' : '' }}
                        </span>
                    </div>
                </label>
                {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endfor %}

        <div class="flex gap-4 mt-8">
            <a href="{{ path('app_public_booking_index', {token: token}) }}"
               class="flex-1 flex items-center justify-center gap-2 px-6 py-4 text-sm font-semibold text-ink border-2 border-ink/30 hover:border-ink transition-colors">
                Annuler
            </a>
            <button type="submit"
                    class="flex-1 flex items-center justify-center gap-2 px-6 py-4 text-sm font-bold text-white bg-primary hover:bg-primary/90 transition-colors">
                <i data-feather="check" class="w-4 h-4"></i>
                Confirmer le changement
            </button>
        </div>
    </form>
{% else %}
<div class="bg-white border-2 border-ink/20 border-dashed p-12 text-center">
    <div class="w-16 h-16 mx-auto bg-warning/10 flex items-center justify-center mb-4">
        <i data-feather="calendar" class="w-8 h-8 text-warning"></i>
    </div>
    <h3 class="text-lg font-bold text-ink mb-2">Aucun autre creneau disponible</h3>
    <p class="text-sm text-muted mb-6">
        Il n'y a pas d'autre creneau disponible pour cette campagne.
    </p>
    <a href="{{ path('app_public_booking_index', {token: token}) }}"
       class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-ink border-2 border-ink hover:bg-ink hover:text-white transition-colors">
        <i data-feather="arrow-left" class="w-4 h-4"></i>
        Retour
    </a>
</div>
{% endif %}
{% endblock %}
