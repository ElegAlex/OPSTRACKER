{% extends 'booking/public/_layout.html.twig' %}

{% block page_title %}Identification{% endblock %}

{% block main %}
<div class="max-w-md mx-auto">
    <div class="bg-white border-2 border-ink/10 overflow-hidden">
        {# Header #}
        <div class="bg-primary/5 px-6 py-5 border-b-2 border-ink/10">
            <h2 class="text-xl font-bold text-ink">Reservation de creneau</h2>
            <p class="text-sm text-muted mt-1">Identifiez-vous pour acceder aux creneaux</p>
        </div>

        {# Form #}
        <form method="POST" class="p-6 space-y-6">
            <input type="hidden" name="_token" value="{{ csrf_token('public_booking_identify') }}">

            <div>
                <label for="identifiant" class="block text-xs font-semibold text-muted uppercase tracking-wider mb-2">
                    {% if mode == 'libre' %}
                        Entrez votre {{ champIdentification }}
                    {% else %}
                        Selectionnez votre nom
                    {% endif %}
                </label>

                {% if mode == 'libre' %}
                    {# Mode libre : saisie texte #}
                    <input type="text"
                           name="identifiant"
                           id="identifiant"
                           required
                           placeholder="Votre {{ champIdentification|lower }}"
                           autocomplete="off"
                           class="w-full px-4 py-3 border-2 border-ink/20 focus:border-primary focus:outline-none text-ink placeholder-muted">
                    <p class="text-xs text-muted mt-2">
                        {% if champIdentification|lower == 'email' %}
                            Exemple : prenom.nom@entreprise.com
                        {% elseif champIdentification|lower == 'matricule' %}
                            Exemple : ABC123
                        {% else %}
                            Entrez votre {{ champIdentification|lower }} tel qu'il vous a ete communique
                        {% endif %}
                    </p>

                {% else %}
                    {# Mode import ou annuaire : dropdown #}
                    {% if personnes|length > 0 %}
                        <select name="identifiant" id="identifiant" required
                                class="w-full px-4 py-3 border-2 border-ink/20 bg-white focus:border-primary focus:outline-none text-ink">
                            <option value="">-- Choisissez votre nom --</option>
                            {% for personne in personnes %}
                                <option value="{{ personne.id }}">
                                    {{ personne.label }}
                                    {% if personne.service %} ({{ personne.service }}){% endif %}
                                </option>
                            {% endfor %}
                        </select>
                    {% else %}
                        <div class="text-center py-8 text-muted border-2 border-ink/10 rounded">
                            <svg class="w-12 h-12 mx-auto mb-3 text-muted/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                            <p class="font-medium">Aucune personne autorisee configuree.</p>
                            <p class="text-sm">Contactez l'administrateur de la campagne.</p>
                        </div>
                    {% endif %}
                {% endif %}
            </div>

            <button type="submit"
                    class="w-full flex items-center justify-center gap-2 px-6 py-4 text-sm font-bold text-white bg-ink hover:bg-ink/90 transition-colors">
                <i data-feather="arrow-right" class="w-4 h-4"></i>
                Continuer
            </button>
        </form>

        {# Info #}
        <div class="px-6 py-4 bg-paper border-t-2 border-ink/10">
            <p class="text-xs text-muted text-center">
                <i data-feather="shield" class="w-3 h-3 inline"></i>
                Vos donnees sont utilisees uniquement pour cette reservation
            </p>
        </div>
    </div>
</div>
{% endblock %}
