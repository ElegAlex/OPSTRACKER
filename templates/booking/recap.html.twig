{% extends 'base.html.twig' %}

{% block title %}Recapitulatif reservation - {{ campagne.nom }} - OpsTracker{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col">
    {# HEADER PUBLIC #}
    <header class="bg-ink text-white px-8 py-6">
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center justify-between">
                <div>
                    <span class="text-xs font-semibold uppercase tracking-wider text-white/60">OpsTracker</span>
                    <h1 class="text-xl font-bold">{{ campagne.nom }}</h1>
                </div>
                <div class="text-right">
                    <span class="text-sm text-white/60">Bonjour,</span>
                    <p class="font-semibold">{{ agent.nomComplet }}</p>
                </div>
            </div>
        </div>
    </header>

    {# MAIN CONTENT #}
    <main class="flex-1 px-8 py-10 bg-paper">
        <div class="max-w-3xl mx-auto">

            {# Flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}/10 flex items-center gap-3">
                        <i data-feather="{{ label == 'success' ? 'check-circle' : (label == 'warning' ? 'alert-triangle' : (label == 'info' ? 'info' : 'alert-circle')) }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}"></i>
                        <span class="text-sm font-medium">{{ message }}</span>
                    </div>
                {% endfor %}
            {% endfor %}

            {# TITRE PAGE #}
            <div class="mb-8">
                <h2 class="text-3xl font-bold text-ink mb-2">Recapitulatif de votre reservation</h2>
                <p class="text-muted">Retrouvez ci-dessous tous les details de votre intervention programmee.</p>
            </div>

            {# DETAILS RESERVATION #}
            <div class="bg-white border-2 border-ink p-8 mb-8">

                {# Date et Heure #}
                <div class="flex items-start gap-6 pb-6 border-b border-ink/10">
                    <div class="w-16 h-16 bg-primary flex items-center justify-center shrink-0">
                        <div class="text-center text-white">
                            <p class="text-2xl font-bold leading-none">{{ reservation.creneau.date|date('d') }}</p>
                            <p class="text-xs uppercase">{{ reservation.creneau.date|date('M') }}</p>
                        </div>
                    </div>
                    <div class="flex-1">
                        <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-1">Date et horaire</p>
                        <p class="text-2xl font-bold text-ink mb-1">{{ reservation.creneau.date|date('l d F Y') }}</p>
                        <p class="text-lg text-ink">
                            <i data-feather="clock" class="w-4 h-4 inline text-primary"></i>
                            {{ reservation.creneau.heureDebut|date('H:i') }} - {{ reservation.creneau.heureFin|date('H:i') }}
                            <span class="text-sm text-muted">({{ reservation.creneau.dureeMinutes }} minutes)</span>
                        </p>
                    </div>
                </div>

                {# Lieu #}
                <div class="py-6 border-b border-ink/10">
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-primary/10 flex items-center justify-center shrink-0">
                            <i data-feather="map-pin" class="w-5 h-5 text-primary"></i>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-1">Lieu de l'intervention</p>
                            <p class="text-lg font-semibold text-ink">{{ reservation.creneau.lieu ?? 'A votre poste de travail' }}</p>
                            {% if agent.site %}
                            <p class="text-sm text-muted">Site : {{ agent.site }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Description operation #}
                <div class="py-6 border-b border-ink/10">
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-primary/10 flex items-center justify-center shrink-0">
                            <i data-feather="{{ campagne.typeOperation.icone ?? 'settings' }}" class="w-5 h-5 text-primary"></i>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-1">Ce qui va se passer</p>
                            <p class="text-lg font-semibold text-ink">{{ campagne.typeOperation.nom ?? campagne.nom }}</p>
                            {% if campagne.typeOperation.description %}
                            <p class="text-sm text-muted mt-1">{{ campagne.typeOperation.description }}</p>
                            {% endif %}
                            {% if campagne.description %}
                            <p class="text-sm text-muted mt-2 p-3 bg-paper">{{ campagne.description }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Informations agent #}
                <div class="pt-6">
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-primary/10 flex items-center justify-center shrink-0">
                            <i data-feather="user" class="w-5 h-5 text-primary"></i>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-1">Vos informations</p>
                            <p class="font-semibold text-ink">{{ agent.nomComplet }}</p>
                            <p class="text-sm text-muted">{{ agent.email }}</p>
                            <p class="text-sm text-muted">Matricule : {{ agent.matricule }}</p>
                            {% if agent.service %}
                            <p class="text-sm text-muted">Service : {{ agent.service }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>

            {# ACTIONS #}
            <div class="bg-white border-2 border-ink p-6">
                <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-4">
                    {# Bouton ICS #}
                    <a href="{{ path('app_booking_ics', {token: token}) }}"
                       class="flex-1 flex items-center justify-center gap-3 px-6 py-4 text-sm font-semibold text-white bg-primary hover:bg-primary/90 transition-colors">
                        <i data-feather="calendar" class="w-5 h-5"></i>
                        Ajouter a mon agenda
                    </a>

                    {% if not reservation.creneau.verrouillePourDate %}
                    {# Bouton Modifier #}
                    <a href="{{ path('app_booking_modify', {token: token}) }}"
                       class="flex-1 flex items-center justify-center gap-3 px-6 py-4 text-sm font-semibold text-ink border-2 border-ink hover:bg-ink hover:text-white transition-colors">
                        <i data-feather="edit" class="w-5 h-5"></i>
                        Modifier
                    </a>

                    {# Bouton Annuler #}
                    <form action="{{ path('app_booking_cancel', {token: token}) }}" method="post" class="flex-1"
                          onsubmit="return confirm('Etes-vous sur de vouloir annuler votre reservation ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('booking_cancel') }}">
                        <button type="submit"
                                class="w-full flex items-center justify-center gap-3 px-6 py-4 text-sm font-semibold text-danger border-2 border-danger hover:bg-danger hover:text-white transition-colors">
                            <i data-feather="x-circle" class="w-5 h-5"></i>
                            Annuler
                        </button>
                    </form>
                    {% else %}
                    <div class="flex-1 flex items-center justify-center gap-2 px-6 py-4 bg-muted/10 text-muted">
                        <i data-feather="lock" class="w-4 h-4"></i>
                        <span class="text-sm font-medium">Creneau verrouille - Modification impossible</span>
                    </div>
                    {% endif %}
                </div>
            </div>

            {# RAPPEL #}
            <div class="mt-8 bg-primary/5 border-2 border-primary/20 p-6">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-primary/10 flex items-center justify-center shrink-0">
                        <i data-feather="bell" class="w-5 h-5 text-primary"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-ink mb-1">Rappels automatiques</p>
                        <p class="text-sm text-muted">
                            Un email de rappel vous sera envoye {{ campagne.joursVerrouillage }} jour{{ campagne.joursVerrouillage > 1 ? 's' : '' }} avant votre intervention.
                            Pensez a verifier votre boite mail.
                        </p>
                    </div>
                </div>
            </div>

            {# Lien retour #}
            <div class="mt-8 text-center">
                <a href="{{ path('app_booking_index', {token: token}) }}" class="text-sm text-primary hover:underline">
                    <i data-feather="arrow-left" class="w-4 h-4 inline"></i>
                    Retour a l'accueil
                </a>
            </div>

        </div>
    </main>

    {# FOOTER #}
    <footer class="bg-paper border-t-2 border-ink/10 px-8 py-6">
        <div class="max-w-4xl mx-auto text-center text-sm text-muted">
            <p>OpsTracker - Gestion des interventions IT</p>
        </div>
    </footer>
</div>
{% endblock %}
