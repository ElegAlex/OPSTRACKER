{% extends 'campagne/_layout.html.twig' %}

{% block title %}Modifier le prerequis - {{ campagne.nom }} - OpsTracker{% endblock %}

{% block main %}
{# ========================================
   HEADER
   ======================================== #}
<header class="bg-white border-b-4 border-ink">
    <div class="px-10 py-6">
        {# Breadcrumb #}
        <div class="flex items-center gap-2 text-sm text-muted mb-3">
            <a href="{{ path('app_campagne_index') }}" class="hover:text-ink">Campagnes</a>
            <i data-feather="chevron-right" class="w-4 h-4"></i>
            <a href="{{ path('app_prerequis_index', {campagneId: campagne.id}) }}" class="hover:text-ink">{{ campagne.nom }}</a>
            <i data-feather="chevron-right" class="w-4 h-4"></i>
            <span class="text-ink font-medium">Modifier</span>
        </div>

        <div class="flex items-center gap-4">
            <h1 class="text-3xl font-bold tracking-tight">Modifier le prerequis</h1>
            {% if prerequis.segment %}
            <span class="flex items-center gap-2 px-3 py-1 bg-{{ prerequis.segment.couleur }}/10 text-sm font-medium">
                <span class="w-3 h-3 bg-{{ prerequis.segment.couleur }}"></span>
                {{ prerequis.segment.nom }}
            </span>
            {% else %}
            <span class="px-3 py-1 bg-paper text-sm font-medium">Global</span>
            {% endif %}
        </div>
    </div>
</header>

{# ========================================
   FORM
   ======================================== #}
<div class="flex-1 overflow-auto">
    <div class="px-10 py-8 max-w-2xl">

        {{ form_start(form, {attr: {class: 'space-y-6'}}) }}

        <div class="bg-white border-2 border-ink p-6 space-y-6">

            {# Libelle #}
            <div>
                {{ form_label(form.libelle, null, {label_attr: {class: 'block text-sm font-semibold mb-2'}}) }}
                {{ form_widget(form.libelle) }}
                {{ form_errors(form.libelle) }}
            </div>

            {# Responsable #}
            <div>
                {{ form_label(form.responsable, null, {label_attr: {class: 'block text-sm font-semibold mb-2'}}) }}
                {{ form_widget(form.responsable) }}
                <p class="text-xs text-muted mt-1">Optionnel - Personne en charge de ce prerequis</p>
                {{ form_errors(form.responsable) }}
            </div>

            {# Date cible #}
            <div>
                {{ form_label(form.dateCible, null, {label_attr: {class: 'block text-sm font-semibold mb-2'}}) }}
                {{ form_widget(form.dateCible) }}
                <p class="text-xs text-muted mt-1">Optionnel - Date limite souhaitee</p>
                {{ form_errors(form.dateCible) }}
            </div>

            {# Statut #}
            <div>
                {{ form_label(form.statut, null, {label_attr: {class: 'block text-sm font-semibold mb-2'}}) }}
                {{ form_widget(form.statut) }}
                {{ form_errors(form.statut) }}
            </div>

        </div>

        {# Actions #}
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <button type="submit" class="px-6 py-3 bg-ink text-white font-semibold hover:bg-ink/90 transition-colors">
                    <span class="flex items-center gap-2">
                        <i data-feather="save" class="w-4 h-4"></i>
                        Enregistrer
                    </span>
                </button>
                <a href="{{ path('app_prerequis_index', {campagneId: campagne.id}) }}" class="px-6 py-3 text-muted hover:text-ink font-medium transition-colors">
                    Annuler
                </a>
            </div>

            {# Delete #}
            <form action="{{ path('app_prerequis_delete', {campagneId: campagne.id, id: prerequis.id}) }}" method="POST"
                  onsubmit="return confirm('Supprimer ce prerequis ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prerequis.id) }}">
                <button type="submit" class="px-4 py-2 text-danger hover:bg-danger/10 font-medium transition-colors">
                    <span class="flex items-center gap-2">
                        <i data-feather="trash-2" class="w-4 h-4"></i>
                        Supprimer
                    </span>
                </button>
            </form>
        </div>

        {{ form_end(form) }}

    </div>
</div>
{% endblock %}
