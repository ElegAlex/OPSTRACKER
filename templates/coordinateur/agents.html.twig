{% extends 'campagne/_layout.html.twig' %}

{% block title %}Agents delegues - {{ campagne.nom }} - OpsTracker{% endblock %}

{% block main %}
{# HEADER #}
<header class="bg-white px-12 py-8 border-b-4 border-ink">
    <div class="flex justify-between items-start">
        <div>
            {# Breadcrumb #}
            <div class="flex items-center gap-2 text-sm text-muted mb-3">
                <a href="{{ path('app_campagne_index') }}" class="hover:text-ink">Campagnes</a>
                <i data-feather="chevron-right" class="w-4 h-4"></i>
                <a href="{{ path('app_dashboard_campagne', {id: campagne.id}) }}" class="hover:text-ink">{{ campagne.nom }}</a>
                <i data-feather="chevron-right" class="w-4 h-4"></i>
                <span class="text-ink font-medium">Agents delegues</span>
            </div>

            {# Title #}
            <div class="flex items-center gap-4">
                <h1 class="text-3xl font-bold tracking-tight">Coordination des reservations</h1>
                <span class="px-2 py-1 bg-complete/10 text-complete text-xs font-bold uppercase tracking-wider">
                    RG-114
                </span>
            </div>

            {# Meta #}
            <div class="flex items-center gap-6 mt-3 text-sm text-muted">
                <span class="flex items-center gap-2">
                    <i data-feather="briefcase" class="w-4 h-4"></i>
                    Services : {{ services|join(', ') }}
                </span>
                <span class="flex items-center gap-2">
                    <i data-feather="users" class="w-4 h-4"></i>
                    {{ total_agents }} agent{{ total_agents > 1 ? 's' : '' }}
                </span>
                <span class="flex items-center gap-2">
                    <i data-feather="check-circle" class="w-4 h-4 text-success"></i>
                    {{ agents_positionnes }} positionne{{ agents_positionnes > 1 ? 's' : '' }}
                </span>
            </div>
        </div>

        {# Actions #}
        <div class="flex items-center gap-3">
            <a href="{{ path('app_dashboard_campagne', {id: campagne.id}) }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-muted border-2 border-ink/10 hover:border-ink hover:text-ink transition-colors">
                <i data-feather="arrow-left" class="w-4 h-4"></i>
                Retour
            </a>
        </div>
    </div>
</header>

{# CONTENT #}
<div class="flex-1 overflow-auto">
    <div class="px-12 py-8">

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}/10 flex items-center gap-3">
                    <i data-feather="{{ label == 'success' ? 'check-circle' : (label == 'warning' ? 'alert-triangle' : (label == 'info' ? 'info' : 'alert-circle')) }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}"></i>
                    <span class="text-sm font-medium">{{ message }}</span>
                </div>
            {% endfor %}
        {% endfor %}

        {# Statistiques #}
        <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="bg-white border-2 border-ink p-6">
                <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-2">Agents dans le perimetre</p>
                <p class="text-4xl font-bold num text-ink">{{ total_agents }}</p>
            </div>
            <div class="bg-white border-2 border-ink p-6">
                <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-2">Taux de couverture</p>
                {% set taux = total_agents > 0 ? (agents_positionnes / total_agents * 100)|round : 0 %}
                {% set couleurTaux = taux >= 80 ? 'success' : (taux >= 50 ? 'warning' : 'danger') %}
                <div class="flex items-baseline gap-1">
                    <span class="text-4xl font-bold num text-{{ couleurTaux }}">{{ taux }}</span>
                    <span class="text-xl font-bold text-muted">%</span>
                </div>
                <div class="h-2 bg-paper mt-2">
                    <div class="h-full bg-{{ couleurTaux }}" style="width: {{ taux }}%"></div>
                </div>
            </div>
            <div class="bg-white border-2 border-ink p-6">
                <p class="text-xs font-semibold text-muted uppercase tracking-wider mb-2">Agents a positionner</p>
                <p class="text-4xl font-bold num text-{{ (total_agents - agents_positionnes) > 0 ? 'warning' : 'success' }}">{{ total_agents - agents_positionnes }}</p>
            </div>
        </div>

        {# Liste des agents #}
        {% if agents|length > 0 %}
        <div class="bg-white border-2 border-ink overflow-hidden">
            <table class="w-full">
                <thead class="bg-paper border-b-2 border-ink">
                    <tr>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Agent</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Matricule</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Service</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Site</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Statut</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-ink uppercase tracking-wider">Creneau</th>
                        <th class="px-6 py-4"></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-ink/10">
                    {% for agent in agents %}
                    {% set reservation = reservations[agent.id] %}
                    <tr class="hover:bg-paper/50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 bg-complete/10 flex items-center justify-center text-sm font-semibold text-complete">
                                    {{ agent.prenom|first|upper }}{{ agent.nom|first|upper }}
                                </div>
                                <div>
                                    <p class="font-medium text-ink">{{ agent.nomComplet }}</p>
                                    <p class="text-xs text-muted">{{ agent.email }}</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-muted font-mono">
                            {{ agent.matricule }}
                        </td>
                        <td class="px-6 py-4 text-sm text-muted">
                            {{ agent.service ?? '-' }}
                        </td>
                        <td class="px-6 py-4 text-sm text-muted">
                            {{ agent.site ?? '-' }}
                        </td>
                        <td class="px-6 py-4">
                            {% if reservation %}
                            <span class="px-2 py-1 bg-success/10 text-success text-xs font-bold uppercase tracking-wider flex items-center gap-1 w-fit">
                                <i data-feather="check" class="w-3 h-3"></i>
                                Positionne
                            </span>
                            {% else %}
                            <span class="px-2 py-1 bg-warning/10 text-warning text-xs font-bold uppercase tracking-wider flex items-center gap-1 w-fit">
                                <i data-feather="clock" class="w-3 h-3"></i>
                                A positionner
                            </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm">
                            {% if reservation %}
                            <div>
                                <p class="font-medium text-ink">{{ reservation.creneau.date|date('d/m/Y') }}</p>
                                <p class="text-muted">{{ reservation.creneau.heureDebut|date('H:i') }} - {{ reservation.creneau.heureFin|date('H:i') }}</p>
                                {% if reservation.typePositionnement != 'agent' %}
                                <p class="text-xs text-complete mt-1">
                                    <i data-feather="user" class="w-3 h-3 inline"></i>
                                    {{ reservation.typePositionnementLabel }}
                                </p>
                                {% endif %}
                            </div>
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                {% if reservation %}
                                    {% if not reservation.creneau.verrouillePourDate %}
                                    <a href="{{ path('app_coord_modify', {campagne: campagne.id, reservation: reservation.id}) }}"
                                       class="w-8 h-8 border border-ink/10 inline-flex items-center justify-center text-muted hover:bg-ink hover:text-white hover:border-ink transition-colors"
                                       title="Modifier">
                                        <i data-feather="edit-2" class="w-4 h-4"></i>
                                    </a>
                                    <form action="{{ path('app_coord_cancel', {campagne: campagne.id, reservation: reservation.id}) }}"
                                          method="post"
                                          class="inline"
                                          onsubmit="return confirm('Annuler la reservation de {{ agent.nomComplet }} ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('coord_cancel_' ~ reservation.id) }}">
                                        <button type="submit"
                                                class="w-8 h-8 border border-ink/10 inline-flex items-center justify-center text-muted hover:bg-danger hover:text-white hover:border-danger transition-colors"
                                                title="Annuler">
                                            <i data-feather="x" class="w-4 h-4"></i>
                                        </button>
                                    </form>
                                    {% else %}
                                    <span class="text-xs text-muted flex items-center gap-1" title="Creneau verrouille">
                                        <i data-feather="lock" class="w-3 h-3"></i>
                                        Verrouille
                                    </span>
                                    {% endif %}
                                {% else %}
                                <a href="{{ path('app_coord_position', {campagne: campagne.id, agent: agent.id}) }}"
                                   class="flex items-center gap-2 px-4 py-2 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                                    <i data-feather="plus" class="w-4 h-4"></i>
                                    Positionner
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="bg-white border-2 border-ink/20 border-dashed p-12 text-center">
            <div class="w-16 h-16 mx-auto bg-complete/10 flex items-center justify-center mb-4">
                <i data-feather="users" class="w-8 h-8 text-complete"></i>
            </div>
            <h3 class="text-lg font-bold text-ink mb-2">Aucun agent dans le perimetre</h3>
            <p class="text-sm text-muted">Vous n'avez pas d'agents dans les services qui vous sont delegues.</p>
        </div>
        {% endif %}

    </div>
</div>
{% endblock %}
