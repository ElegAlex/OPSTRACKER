{# T-702 : Progression par segment #}
<div class="card-elevated border-2 border-ink">
    <div class="p-6 border-b-2 border-ink/10">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-primary"></div>
                <h2 class="text-lg font-bold">Progression par segment</h2>
            </div>
            <span class="text-xs text-muted">{{ segments|length }} segment{{ segments|length > 1 ? 's' : '' }} â€¢ {{ kpi.total ?? 0 }} operations</span>
        </div>
    </div>

    {% if segments|length == 0 %}
    <div class="p-8 text-center text-muted">
        <i data-feather="layers" class="w-12 h-12 mx-auto mb-4 text-ink/20"></i>
        <p class="font-medium">Aucun segment</p>
        <p class="text-sm mt-1">Creez des segments pour organiser vos operations</p>
        <a href="{{ path('app_segment_new', {campagne: campagne.id}) }}" class="inline-flex items-center gap-2 mt-4 px-4 py-2 bg-ink text-white text-sm font-medium hover:bg-ink/90 transition-colors">
            <i data-feather="plus" class="w-4 h-4"></i>
            Creer un segment
        </a>
    </div>
    {% else %}
    <div class="divide-y divide-ink/5">
        {% for item in segments %}
        <a href="{{ path('app_segment_show', {campagne: campagne.id, id: item.segment.id}) }}" class="segment-row p-5 block cursor-pointer {{ item.is_late ? 'bg-danger/5' : '' }}">
            <div class="flex items-center justify-between mb-3">
                <div class="flex items-center gap-3">
                    <div class="w-3 h-3 bg-{{ item.is_late ? 'warning' : 'success' }}"></div>
                    <h3 class="font-semibold text-ink">{{ item.segment.nom }}</h3>
                    <span class="text-xs text-muted">{{ item.total }} operation{{ item.total > 1 ? 's' : '' }}</span>
                    {% if item.is_late %}
                    <span class="flex items-center gap-1 px-2 py-0.5 bg-danger text-white text-[10px] font-bold uppercase">
                        <i data-feather="alert-triangle" class="w-3 h-3"></i>
                        En retard
                    </span>
                    {% endif %}
                </div>
                <div class="flex items-center gap-4">
                    <span class="text-2xl font-bold num {{ item.is_late ? 'text-danger' : 'text-ink' }}">{{ item.progression|round }}%</span>
                    <i data-feather="chevron-right" class="w-5 h-5 text-muted"></i>
                </div>
            </div>
            {# Barre de progression multi-statuts #}
            <div class="h-3 bg-paper flex overflow-hidden">
                {% set realise_pct = item.total > 0 ? (item.realise / item.total * 100) : 0 %}
                {% set planifie_pct = item.total > 0 ? (item.planifie / item.total * 100) : 0 %}
                {% set reporte_pct = item.total > 0 ? (item.reporte / item.total * 100) : 0 %}
                {% set remedier_pct = item.total > 0 ? (item.a_remedier / item.total * 100) : 0 %}
                <div class="bg-success h-full" style="width: {{ realise_pct }}%"></div>
                <div class="bg-primary h-full" style="width: {{ planifie_pct }}%"></div>
                <div class="bg-warning h-full" style="width: {{ reporte_pct }}%"></div>
                <div class="bg-danger h-full" style="width: {{ remedier_pct }}%"></div>
            </div>
            {# Legende - RG-080 Triple signalisation #}
            <div class="flex items-center gap-6 mt-2 text-xs text-muted">
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 bg-success"></span>
                    {{ item.realise }} realise{{ item.realise > 1 ? 's' : '' }}
                </span>
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 bg-primary"></span>
                    {{ item.planifie }} planifie{{ item.planifie > 1 ? 's' : '' }}
                </span>
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 bg-warning"></span>
                    {{ item.reporte }} reporte{{ item.reporte > 1 ? 's' : '' }}
                </span>
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 bg-danger"></span>
                    {{ item.a_remedier }} a remedier
                </span>
            </div>
        </a>
        {% endfor %}
    </div>
    {% endif %}
</div>
