<turbo-frame id="segments-list">
{# T-702 : Progression unifiee avec hierarchie claire #}
<div class="card-elevated border-2 border-ink">

    {# Header principal #}
    <div class="p-6 border-b-2 border-ink/10">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-primary"></div>
                <h2 class="text-lg font-bold">Progression</h2>
            </div>
            <span class="text-xs text-muted">{{ segments|length }} segment{{ segments|length > 1 ? 's' : '' }} â€¢ {{ kpi.total ?? 0 }} operations</span>
        </div>
    </div>

    {# ===== PREREQUIS GLOBAUX (Callout avec styles inline) ===== #}
    {% if prerequisGlobauxStats is defined and prerequisGlobauxStats.total > 0 %}
        <div class="px-6 py-5" style="background-color: rgba(59, 130, 246, 0.08); border-left: 4px solid #3b82f6;">
            <div class="flex items-center justify-between mb-3">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center"
                         style="background-color: rgba(59, 130, 246, 0.15);">
                        <i data-feather="check-square" class="w-5 h-5" style="color: #3b82f6;"></i>
                    </div>
                    <div>
                        <span class="font-semibold text-ink">Prerequis globaux</span>
                        <span class="text-sm text-muted ml-2">
                            {{ prerequisGlobauxStats.fait }}/{{ prerequisGlobauxStats.total }} completes
                        </span>
                    </div>
                    {% if prerequisGlobauxStats.progression == 100 %}
                        <span class="ml-2 px-2.5 py-1 text-xs font-semibold rounded-full flex items-center gap-1"
                              style="background-color: rgba(16, 185, 129, 0.15); color: #10b981;">
                            <i data-feather="check" class="w-3 h-3"></i>
                            Complet
                        </span>
                    {% elseif prerequisGlobauxStats.a_faire > 0 %}
                        <span class="ml-2 px-2.5 py-1 text-xs font-semibold rounded-full"
                              style="background-color: rgba(245, 158, 11, 0.15); color: #f59e0b;">
                            {{ prerequisGlobauxStats.a_faire }} a faire
                        </span>
                    {% endif %}
                </div>
                <div class="flex items-center gap-3">
                    <span class="text-xl font-bold"
                          style="color: {{ prerequisGlobauxStats.progression == 100 ? '#10b981' : '#3b82f6' }};">
                        {{ prerequisGlobauxStats.progression }}%
                    </span>
                    <a href="{{ path('app_prerequis_index', {campagneId: campagne.id}) }}" class="text-muted hover:text-ink">
                        <i data-feather="chevron-right" class="w-5 h-5"></i>
                    </a>
                </div>
            </div>
            <div class="h-3 rounded-full overflow-hidden"
                 style="background-color: rgba(255,255,255,0.8); box-shadow: inset 0 1px 2px rgba(0,0,0,0.1);">
                <div class="h-full rounded-full transition-all duration-500"
                     style="width: {{ prerequisGlobauxStats.progression }}%; background-color: {{ prerequisGlobauxStats.progression == 100 ? '#10b981' : '#3b82f6' }};"></div>
            </div>
        </div>
    {% endif %}

    {# ===== SOUS-TITRE SEGMENTS ===== #}
    <div class="px-6 py-3 bg-gray-50 border-y border-ink/5">
        <div class="flex items-center gap-2 text-sm">
            <i data-feather="layers" class="w-4 h-4 text-muted"></i>
            <span class="font-medium text-muted uppercase tracking-wide">
                Progression par segment
            </span>
        </div>
    </div>

    {# ===== SEGMENTS ===== #}
    {% if segments|length == 0 %}
    <div class="p-8 text-center text-muted">
        <i data-feather="layers" class="w-12 h-12 mx-auto mb-4 text-ink/20"></i>
        <p class="font-medium">Aucun segment</p>
        <p class="text-sm mt-1">Creez des segments pour organiser vos operations</p>
        <a href="{{ path('app_segment_new', {campagne: campagne.id}) }}" class="inline-flex items-center gap-2 mt-4 px-4 py-2 bg-ink text-white text-sm font-medium hover:bg-ink/90 transition-colors">
            <i data-feather="plus" class="w-4 h-4"></i>
            Creer un segment
        </a>
    </div>
    {% else %}
    <div class="divide-y divide-ink/10">
        {% for item in segments %}
        <a href="{{ path('app_segment_show', {campagne: campagne.id, id: item.segment.id}) }}" class="segment-row px-6 py-4 block cursor-pointer {{ item.is_late ? 'bg-danger/5' : '' }}">
            {# Ligne principale segment #}
            <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-3">
                    <div class="w-3 h-3 bg-{{ item.is_late ? 'warning' : 'success' }}"></div>
                    <h3 class="font-semibold text-ink">{{ item.segment.nom }}</h3>
                    <span class="text-xs text-muted">{{ item.total }} operation{{ item.total > 1 ? 's' : '' }}</span>
                    {% if item.is_late %}
                    <span class="flex items-center gap-1 px-2 py-0.5 bg-danger text-white text-[10px] font-bold uppercase rounded">
                        <i data-feather="alert-triangle" class="w-3 h-3"></i>
                        En retard
                    </span>
                    {% endif %}
                </div>
                <div class="flex items-center gap-4">
                    <span class="text-2xl font-bold num {{ item.is_late ? 'text-danger' : 'text-ink' }}">{{ item.progression|round }}%</span>
                    <i data-feather="chevron-right" class="w-5 h-5 text-muted"></i>
                </div>
            </div>

            {# Barre de progression multi-statuts #}
            <div class="h-3 bg-paper rounded-full flex overflow-hidden mb-2">
                {% set realise_pct = item.total > 0 ? (item.realise / item.total * 100) : 0 %}
                {% set planifie_pct = item.total > 0 ? (item.planifie / item.total * 100) : 0 %}
                {% set reporte_pct = item.total > 0 ? (item.reporte / item.total * 100) : 0 %}
                {% set remedier_pct = item.total > 0 ? (item.a_remedier / item.total * 100) : 0 %}
                <div class="bg-success h-full" style="width: {{ realise_pct }}%"></div>
                <div class="bg-primary h-full" style="width: {{ planifie_pct }}%"></div>
                <div class="bg-warning h-full" style="width: {{ reporte_pct }}%"></div>
                <div class="bg-danger h-full" style="width: {{ remedier_pct }}%"></div>
            </div>

            {# Legende operations - RG-080 Triple signalisation #}
            <div class="flex items-center gap-6 text-xs text-muted">
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-success"></span>
                    {{ item.realise }} realise{{ item.realise > 1 ? 's' : '' }}
                </span>
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-primary"></span>
                    {{ item.planifie }} planifie{{ item.planifie > 1 ? 's' : '' }}
                </span>
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-warning"></span>
                    {{ item.reporte }} reporte{{ item.reporte > 1 ? 's' : '' }}
                </span>
                <span class="flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-danger"></span>
                    {{ item.a_remedier }} a remedier
                </span>
            </div>

            {# Prerequis du segment - Indente et fin #}
            {% if item.prerequis is defined and item.prerequis.total > 0 %}
                <div class="mt-3 ml-5 pl-4 border-l-2 border-ink/10">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2 text-sm">
                            <i data-feather="check-square" class="w-3.5 h-3.5 text-muted"></i>
                            <span class="text-muted">Prerequis :</span>
                            <span class="font-medium {{ item.prerequis.progression == 100 ? 'text-success' : 'text-ink' }}">
                                {{ item.prerequis.fait }}/{{ item.prerequis.total }}
                            </span>
                            {% if item.prerequis.progression == 100 %}
                                <i data-feather="check-circle" class="w-3.5 h-3.5 text-success"></i>
                            {% else %}
                                <span class="text-warning text-xs">!</span>
                            {% endif %}
                        </div>
                        <span class="text-sm font-medium {{ item.prerequis.progression == 100 ? 'text-success' : 'text-muted' }}">
                            {{ item.prerequis.progression }}%
                        </span>
                    </div>
                    <div class="mt-1.5 h-1.5 bg-gray-100 rounded-full overflow-hidden">
                        <div class="h-full rounded-full transition-all duration-300
                                    {{ item.prerequis.progression == 100 ? 'bg-success' : 'bg-primary/70' }}"
                             style="width: {{ item.prerequis.progression }}%"></div>
                    </div>
                </div>
            {% endif %}
        </a>
        {% endfor %}
    </div>
    {% endif %}

</div>
</turbo-frame>
