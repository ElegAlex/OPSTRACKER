{# Activite recente d'une campagne #}
<div class="card-elevated border-2 border-ink">
    <div class="p-5 border-b-2 border-ink/10">
        <div class="flex items-center gap-3">
            <div class="w-3 h-3 bg-success"></div>
            <h2 class="font-bold">Activite recente</h2>
        </div>
    </div>

    {% if activite|length == 0 %}
    <div class="p-6 text-center text-muted">
        <i data-feather="activity" class="w-8 h-8 mx-auto mb-2 text-ink/20"></i>
        <p class="text-sm">Aucune activite recente</p>
    </div>
    {% else %}
    <div class="divide-y divide-ink/5">
        {% for item in activite %}
        <div class="p-4 flex items-start gap-3">
            {# Icone selon le type d'action - RG-080 Triple signalisation #}
            {% if item.type == 'termine' %}
                <div class="w-8 h-8 bg-success/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <i data-feather="check" class="w-4 h-4 text-success"></i>
                </div>
            {% elseif item.type == 'reporte' %}
                <div class="w-8 h-8 bg-warning/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <i data-feather="pause" class="w-4 h-4 text-warning"></i>
                </div>
            {% elseif item.type == 'probleme' %}
                <div class="w-8 h-8 bg-danger/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <i data-feather="alert-triangle" class="w-4 h-4 text-danger"></i>
                </div>
            {% elseif item.type == 'demarre' %}
                <div class="w-8 h-8 bg-primary/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <i data-feather="play" class="w-4 h-4 text-primary"></i>
                </div>
            {% else %}
                <div class="w-8 h-8 bg-muted/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <i data-feather="edit-2" class="w-4 h-4 text-muted"></i>
                </div>
            {% endif %}

            <div class="min-w-0">
                <p class="text-sm text-ink">
                    {% if item.technicien %}
                        <span class="font-semibold">{{ item.technicien }}</span>
                    {% endif %}
                    {% if item.type == 'termine' %}
                        a termine
                    {% elseif item.type == 'reporte' %}
                        a reporte
                    {% elseif item.type == 'probleme' %}
                        a signale
                    {% elseif item.type == 'demarre' %}
                        a demarre
                    {% else %}
                        a modifie
                    {% endif %}
                    <span class="font-medium">{{ item.operation.matricule }}</span>
                </p>
                <p class="text-xs text-muted mt-0.5">
                    {% if item.operation.segment %}
                        {{ item.operation.segment.nom }} â€¢
                    {% endif %}
                    {{ item.timestamp|date('H:i') }}
                </p>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}

    <div class="p-4 border-t border-ink/10">
        <a href="{{ path('app_operation_index', {campagne: campagne.id}) }}" class="text-sm font-medium text-primary hover:underline">
            Voir toutes les operations &rarr;
        </a>
    </div>
</div>
