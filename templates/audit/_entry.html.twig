{# Composant pour afficher une entrée d'audit #}
{# Variables: entry, showEntity (optionnel) #}
{% set showEntity = showEntity|default(false) %}

<div class="bg-white border-2 border-ink p-4">
    <div class="flex justify-between items-start mb-3">
        <div class="flex items-center gap-3">
            {# Type d'action #}
            {% set typeColors = {
                'insert': 'success',
                'update': 'primary',
                'remove': 'danger',
            } %}
            {% set color = typeColors[entry.typeCode]|default('muted') %}

            <span class="inline-flex items-center px-3 py-1 border-2 border-{{ color }} text-{{ color }} font-medium">
                {% if entry.typeCode == 'insert' %}
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                {% elseif entry.typeCode == 'update' %}
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                {% elseif entry.typeCode == 'remove' %}
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                {% endif %}
                {{ entry.type }}
            </span>

            {% if showEntity and entry.entityClass is defined %}
                <span class="text-sm text-muted">{{ entry.entityClass }}</span>
            {% endif %}

            <span class="text-sm text-muted">#{{ entry.objectId }}</span>
        </div>

        <div class="text-right text-sm">
            <div class="font-medium text-ink">{{ entry.user }}</div>
            <div class="text-muted">{{ entry.createdAt|date('d/m/Y H:i:s') }}</div>
            {% if entry.ip %}
                <div class="text-muted text-xs">IP: {{ entry.ip }}</div>
            {% endif %}
        </div>
    </div>

    {# Détail des modifications #}
    {% if entry.diffs|length > 0 %}
        <div class="border-t-2 border-muted/20 pt-3 mt-3">
            <table class="w-full text-sm">
                <thead>
                    <tr class="text-left text-muted">
                        <th class="pb-2 pr-4 w-1/4">Champ</th>
                        <th class="pb-2 pr-4 w-5/12">Ancienne valeur</th>
                        <th class="pb-2 w-5/12">Nouvelle valeur</th>
                    </tr>
                </thead>
                <tbody>
                    {% for diff in entry.diffs %}
                        <tr class="border-t border-muted/10">
                            <td class="py-2 pr-4 font-medium text-ink">{{ diff.field }}</td>
                            <td class="py-2 pr-4">
                                {% if diff.old == '(vide)' %}
                                    <span class="text-muted italic">{{ diff.old }}</span>
                                {% else %}
                                    <span class="text-danger line-through">{{ diff.old }}</span>
                                {% endif %}
                            </td>
                            <td class="py-2">
                                {% if diff.new == '(vide)' %}
                                    <span class="text-muted italic">{{ diff.new }}</span>
                                {% else %}
                                    <span class="text-success">{{ diff.new }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% elseif entry.typeCode == 'insert' %}
        <p class="text-sm text-muted italic mt-2">Nouvel élément créé</p>
    {% elseif entry.typeCode == 'remove' %}
        <p class="text-sm text-muted italic mt-2">Élément supprimé</p>
    {% endif %}
</div>
