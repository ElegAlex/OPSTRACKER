{% extends 'campagne/_layout.html.twig' %}

{% block title %}Modifier reservation {{ agent.nomComplet }} - {{ campagne.nom }} - OpsTracker{% endblock %}

{% block main %}
{# HEADER #}
<header class="bg-white px-12 py-8 border-b-4 border-ink">
    <div class="flex justify-between items-start">
        <div>
            {# Breadcrumb #}
            <div class="flex items-center gap-2 text-sm text-muted mb-3">
                <a href="{{ path('app_campagne_index') }}" class="hover:text-ink">Campagnes</a>
                <i data-feather="chevron-right" class="w-4 h-4"></i>
                <a href="{{ path('app_dashboard_campagne', {id: campagne.id}) }}" class="hover:text-ink">{{ campagne.nom }}</a>
                <i data-feather="chevron-right" class="w-4 h-4"></i>
                <a href="{{ path('app_manager_agents', {campagne: campagne.id}) }}" class="hover:text-ink">Mes agents</a>
                <i data-feather="chevron-right" class="w-4 h-4"></i>
                <span class="text-ink font-medium">Modifier</span>
            </div>

            {# Title #}
            <div class="flex items-center gap-4">
                <h1 class="text-3xl font-bold tracking-tight">Modifier le creneau de {{ agent.prenom }}</h1>
            </div>

            {# Meta #}
            <div class="flex items-center gap-6 mt-3 text-sm text-muted">
                <span class="flex items-center gap-2">
                    <i data-feather="user" class="w-4 h-4"></i>
                    {{ agent.nomComplet }}
                </span>
                <span class="flex items-center gap-2">
                    <i data-feather="hash" class="w-4 h-4"></i>
                    {{ agent.matricule }}
                </span>
            </div>
        </div>

        {# Actions #}
        <div class="flex items-center gap-3">
            <a href="{{ path('app_manager_agents', {campagne: campagne.id}) }}" class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-muted border-2 border-ink/10 hover:border-ink hover:text-ink transition-colors">
                <i data-feather="arrow-left" class="w-4 h-4"></i>
                Retour
            </a>
        </div>
    </div>
</header>

{# CONTENT #}
<div class="flex-1 overflow-auto">
    <div class="px-12 py-8">

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 border-2 border-ink/20 bg-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}/10 flex items-center gap-3">
                    <i data-feather="{{ label == 'success' ? 'check-circle' : (label == 'warning' ? 'alert-triangle' : (label == 'info' ? 'info' : 'alert-circle')) }}" class="w-5 h-5 text-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : (label == 'info' ? 'primary' : 'danger')) }}"></i>
                    <span class="text-sm font-medium">{{ message }}</span>
                </div>
            {% endfor %}
        {% endfor %}

        {# Reservation actuelle #}
        <div class="bg-warning/5 border-2 border-warning/20 p-6 mb-8">
            <p class="text-xs font-semibold text-warning uppercase tracking-wider mb-3">Creneau actuel (sera remplace)</p>
            <div class="flex items-center gap-6">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-warning/10 flex items-center justify-center">
                        <i data-feather="calendar" class="w-6 h-6 text-warning"></i>
                    </div>
                    <div>
                        <p class="font-bold text-ink">{{ reservation.creneau.date|date('l d F Y') }}</p>
                        <p class="text-sm text-muted">{{ reservation.creneau.heureDebut|date('H:i') }} - {{ reservation.creneau.heureFin|date('H:i') }}</p>
                    </div>
                </div>
                <div class="flex items-center gap-2 text-sm text-muted">
                    <i data-feather="map-pin" class="w-4 h-4"></i>
                    {{ reservation.creneau.lieu ?? 'Lieu non specifie' }}
                </div>
            </div>
        </div>

        {# T-1806 / US-1007 : Selection du nouveau creneau #}
        {% if creneaux_par_date|length > 0 %}
        <form action="{{ path('app_manager_modify', {campagne: campagne.id, reservation: reservation.id}) }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token('manager_modify_' ~ reservation.id) }}">

            <h2 class="text-xl font-bold text-ink mb-6">Selectionnez le nouveau creneau</h2>

            {% for dateKey, dateGroup in creneaux_par_date %}
            <div class="mb-8">
                <h3 class="flex items-center gap-3 text-lg font-semibold mb-4">
                    <i data-feather="calendar" class="w-5 h-5 text-primary"></i>
                    {{ dateGroup.date|date('l d F Y') }}
                    <span class="text-sm font-normal text-muted">({{ dateGroup.creneaux|length }} creneau{{ dateGroup.creneaux|length > 1 ? 'x' : '' }})</span>
                </h3>

                <div class="space-y-3">
                    {% for creneau in dateGroup.creneaux %}
                    {% set isComplet = creneau.complet %}
                    <label class="block cursor-pointer {{ isComplet ? 'opacity-50 cursor-not-allowed' : '' }}">
                        <div class="bg-white border-2 border-ink/10 hover:border-primary p-4 flex items-center gap-4 transition-colors has-[:checked]:border-primary has-[:checked]:bg-primary/5">
                            <input type="radio"
                                   name="creneau"
                                   value="{{ creneau.id }}"
                                   class="w-5 h-5 text-primary"
                                   {{ isComplet ? 'disabled' : '' }}
                                   required>
                            <div class="flex-1">
                                <div class="flex items-center gap-4">
                                    <p class="font-semibold text-ink">
                                        {{ creneau.heureDebut|date('H:i') }} - {{ creneau.heureFin|date('H:i') }}
                                    </p>
                                    <span class="text-sm text-muted">|</span>
                                    <p class="text-sm text-muted">
                                        {{ creneau.lieu ?? 'Lieu non specifie' }}
                                    </p>
                                    <span class="text-sm text-muted">|</span>
                                    <p class="text-sm text-muted">
                                        {{ creneau.dureeMinutes }} min
                                    </p>
                                </div>
                            </div>
                            {% if isComplet %}
                            <span class="px-2 py-1 bg-danger/10 text-danger text-xs font-bold uppercase">Complet</span>
                            {% else %}
                            <span class="px-2 py-1 bg-success/10 text-success text-xs font-bold uppercase">{{ creneau.placesRestantes }} place{{ creneau.placesRestantes > 1 ? 's' : '' }}</span>
                            {% endif %}
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>
            {% endfor %}

            <div class="flex items-center gap-4 pt-6 border-t border-ink/10">
                <button type="submit" class="flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-ink hover:bg-ink/90 transition-colors">
                    <i data-feather="check" class="w-4 h-4"></i>
                    Confirmer le changement
                </button>
                <a href="{{ path('app_manager_agents', {campagne: campagne.id}) }}" class="flex items-center gap-2 px-6 py-3 text-sm font-medium text-muted border-2 border-ink/10 hover:border-ink hover:text-ink transition-colors">
                    Annuler
                </a>
            </div>
        </form>
        {% else %}
        <div class="bg-white border-2 border-ink/20 border-dashed p-12 text-center">
            <div class="w-16 h-16 mx-auto bg-warning/10 flex items-center justify-center mb-4">
                <i data-feather="calendar" class="w-8 h-8 text-warning"></i>
            </div>
            <h3 class="text-lg font-bold text-ink mb-2">Aucun autre creneau disponible</h3>
            <p class="text-sm text-muted mb-6">Il n'y a pas d'autre creneau disponible pour cette campagne.</p>
            <a href="{{ path('app_manager_agents', {campagne: campagne.id}) }}" class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-ink border-2 border-ink hover:bg-ink hover:text-white transition-colors">
                <i data-feather="arrow-left" class="w-4 h-4"></i>
                Retour a la liste
            </a>
        </div>
        {% endif %}

    </div>
</div>
{% endblock %}
